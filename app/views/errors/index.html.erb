<% content_for :page_title do %>
  ActiveRabbit Errors
<% end %>

<!-- Summary Stats -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Total Errors</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @total_errors %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Open Issues</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @open_errors %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Events Total</p>
        <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@total_events) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Recent (1hr)</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @recent_errors %></p>
      </div>
    </div>
  </div>
</div>

<!-- Errors List / Graph Toggle -->
<div class="bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-medium text-gray-900">üê∞ Captured Errors</h3>
      <div class="flex-1 max-w ml-4 mr-4">
        <%= search_form_for @q, url: errors_path, method: :get, html: { class: "w-full" } do |f| %>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-4 w-4 text-gray-400"
                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <%= f.search_field :exception_class_or_sample_message_or_status_or_project_name_cont, 
              placeholder: "Search", 
              class: "block w-full pl-6 pr-4 py-1.5 text-xs border border-gray-300 rounded-full focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
        <% end %>
      </div>
      <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
        <% list_url = url_for(params.permit!.to_h.except(:tab, :range)) %>
        <% graph_url = url_for(params.permit!.to_h.merge(tab: 'graph', range: (params[:range] || '7D'))) %>
        <% list_active = params[:tab] != 'graph' %>
        <% graph_active = params[:tab] == 'graph' %>
        <%= link_to 'List', list_url, class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{list_active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
        <%= link_to 'Graph', graph_url, class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{graph_active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
      </div>
    </div>
  </div>

    <% if params[:tab] == 'graph' %>
      <div class="border-t border-gray-200 px-6 py-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-medium text-gray-900">Error count over time</h3>
          <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
            <% %w[1H 4H 8H 12H 24H 48H 7D 30D].each do |rk| %>
              <% active = (@graph_range_key || '7D') == rk %>
              <%= link_to rk, url_for(params.permit!.to_h.merge(tab: 'graph', range: rk)), class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
            <% end %>
          </div>
        </div>

        <% if @graph_counts.present? && @graph_has_data %>
          <% labels = (@graph_labels || []).map { |t| case @graph_range_key; when '1H','4H','8H','12H','24H','48H' then t.strftime('%H:%M'); else t.strftime('%b %d'); end } %>
          <div class="relative" style="height: 300px;">
            <canvas data-controller="graph"
                    data-graph-labels-value='<%= labels.to_json %>'
                    data-graph-counts-value='<%= @graph_counts.to_json %>'
                    data-graph-range-value='<%= @graph_range_key %>'></canvas>
          </div>
        <% else %>
          <div class="text-center text-gray-500 py-8">No data for selected range</div>
        <% end %>
      </div>
    <% elsif @issues.any? %>
    <!-- Proper HTML Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link(@q, :exception_class, "Error & Action", class: "inline-flex items-center") %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link(@q, :status, "Status", class: "inline-flex items-center") %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link(@q, :count, "Total", class: "inline-flex items-center") %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              PR
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link(@q, :ai_summary, "AI", class: "inline-flex items-center") %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link(@q, :last_seen_at, "Last Seen", class: "inline-flex items-center") %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sort_link(@q, :first_seen_at, "First Seen", class: "inline-flex items-center") %>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @issues.each do |issue| %>
            <tr class="hover:bg-gray-50 hover:cursor-pointer transition-colors" onclick="window.location.href='<%=
              if @current_project
                "/#{@current_project.slug}/errors/#{issue.id}"
              elsif @project
                project_error_path(@project, issue)
              else
                error_path(issue)
              end %>'">
              <!-- Error & Action -->
              <td class="px-6 py-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0 mt-1">
                    <div class="w-2 h-2 rounded-full <%= issue.status == 'open' ? 'bg-red-400' : issue.status == 'wip' ? 'bg-yellow-400' : 'bg-green-400' %>"></div>
                  </div>
                  <div class="ml-3 min-w-0">
                    <div class="flex items-center space-x-2 mb-1">
                      <span class="text-sm font-medium text-indigo-600">
                        <%= issue.exception_class %>
                      </span>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        <%= truncate(issue.project&.name || 'Unknown', length: 15) %>
                      </span>
                    </div>
                    <% if issue.sample_message.present? %>
                      <div class="text-xs text-gray-600 mb-1">
                        <%= truncate(issue.sample_message, length: 60) %>
                      </div>
                    <% end %>
                    <div class="text-xs text-gray-500">
                      <strong>Action:</strong> <%= issue.controller_action || 'unknown' %>
                    </div>
                    <div class="text-xs text-gray-400">
                      <%= truncate(issue.top_frame || 'unknown', length: 40) %>
                    </div>
                  </div>
                </div>
              </td>

              <!-- Status -->
              <td class="px-6 py-4" onclick="event.stopPropagation();">
                <%= form_with model: issue,
                              url: (@project ? project_error_path(@project, issue) : error_path(issue)),
                              method: :patch,
                              local: true,
                              class: "inline" do |f| %>
                  <%= f.select :status,
                    options_for_select([['OPEN', 'open'], ['WORK IN PROGRESS', 'wip'], ['RESOLVED', 'closed']], issue.status),
                    {},
                    class: "rounded-full text-xs font-medium px-2 py-1
                            #{ issue.status == 'open' ? 'bg-red-100 text-red-800' :
                              issue.status == 'wip' ? 'bg-yellow-100 text-yellow-800' :
                              'bg-green-100 text-green-800' }",
                    onchange: 'this.form.submit();',
                    onclick: 'event.stopPropagation();' %>
                <% end %>
              </td>

              <!-- Total -->
              <td class="px-6 py-4">
                <div class="text-sm font-semibold text-gray-900"><%= issue.count %></div>
                <div class="text-xs text-gray-500">times</div>
              </td>
              <td class="px-6 py-4" onclick="event.stopPropagation();">
                <% if (pr_url = issue.github_pr_url).present? %>
                  <%= link_to pr_url, target: "_blank", rel: "noopener", class: "inline-flex items-center px-2 py-1 text-xs font-medium text-gray-600 hover:text-gray-900 focus:outline-none" do %>
                    <svg class="w-4 h-4" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.57 7.57 0 012-.27c.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.19 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z" clip-rule="evenodd" />
                    </svg>
                    <span class="ml-1">GitHub</span>
                  <% end %>
                <% else %>
                  <span class="text-xs text-gray-400">‚Äî</span>
                <% end %>
              </td>
              <td class="px-6 py-4" onclick="event.stopPropagation();">
                <%= link_to(
                  if @current_project
                    "/#{@current_project.slug}/errors/#{issue.id}?tab=ai"
                  elsif @project
                    project_error_path(@project, issue, tab: 'ai')
                  else
                    error_path(issue, tab: 'ai')
                  end,
                  target: "_blank",
                  rel: "noopener",
                  class: "inline-flex items-center px-2 py-1 border shadow-sm text-xs font-medium rounded focus:outline-none focus:ring-1 " +
                    (issue.ai_summary.present? ? 
                      "text-green-600 bg-green-50 border-green-200 hover:bg-green-100 focus:ring-green-500" :
                      "text-indigo-600 bg-indigo-50 border-indigo-200 hover:bg-indigo-100 focus:ring-indigo-500")
                ) do %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  AI summary
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= time_ago_in_words(issue.last_seen_at) %> ago</div>
                <div class="text-xs text-gray-500"><%= issue.last_seen_at.strftime("%b %d, %Y %H:%M") %></div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= time_ago_in_words(issue.first_seen_at) %> ago</div>
                <div class="text-xs text-gray-500"><%= issue.first_seen_at.strftime("%b %d, %Y %H:%M") %></div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @pagy && @pagy.pages > 1 %>
      <div class="px-6 py-4 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <div class="hidden sm:block">
            <p class="text-sm text-gray-700">
              Showing
              <span class="font-medium"><%= @pagy.from %></span>
              to
              <span class="font-medium"><%= @pagy.to %></span>
              of
              <span class="font-medium"><%= @pagy.count %></span>
              errors
            </p>
          </div>
          <div class="flex-1 flex justify-end">
            <%== pagy_nav(@pagy) %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="p-12 text-center">
      <div class="w-12 h-12 mx-auto mb-4 text-gray-400">
        üê∞
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No errors captured yet</h3>
      <p class="text-gray-500 mb-4">ActiveRabbit is monitoring your applications. Errors will appear here when they occur.</p>
      <div class="text-sm text-gray-400">
        <p>Try triggering some test errors:</p>
        <code class="bg-gray-100 px-2 py-1 rounded">curl http://localhost:3001/test/exception</code>
      </div>
    </div>
  <% end %>
</div>
