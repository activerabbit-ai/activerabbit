<% content_for :title, @project.name %>

<div class="mb-8">
  <div class="flex justify-between items-center">
    <div>
      <div class="flex items-center space-x-2 mb-2">
        <%= link_to dashboard_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        <% end %>
        <h1 class="text-2xl font-bold text-gray-900"><%= @project.name %></h1>
        <span class="px-2 py-1 text-xs font-medium rounded-full <%= @project.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= @project.active? ? 'Active' : 'Inactive' %>
        </span>
      </div>
      <p class="text-gray-600"><%= @project.description %></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Settings", project_settings_path(@project),
          class: "bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors" %>
    </div>
  </div>
</div>

<!-- Project Overview + Quick Actions -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
  <!-- Overview -->
  <div class="lg:col-span-2 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-2">Project Overview</h2>
    <p class="text-sm text-gray-500 mb-4">
      Snapshot of errors, traffic, and health for this project.
    </p>

    <% avg_response = @performance_stats.values.sum / [@performance_stats.size, 1].max %>

    <!-- Top stats row (like dashboard cards) -->
    <div class="grid grid-cols-1 sm:grid-cols-4 gap-4 mb-4">
      <div class="bg-red-50 border border-red-100 rounded-lg px-3 py-2">
        <p class="text-xs font-medium text-red-700">Open Issues</p>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= @project_stats[:open_issues] %></p>
      </div>
      <div class="bg-blue-50 border border-blue-100 rounded-lg px-3 py-2">
        <p class="text-xs font-medium text-blue-700">Events Today</p>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= @project_stats[:events_today] %></p>
      </div>
      <div class="bg-purple-50 border border-purple-100 rounded-lg px-3 py-2">
        <p class="text-xs font-medium text-purple-700">Events Total</p>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= number_with_delimiter(@project_stats[:events_total]) %></p>
      </div>
      <div class="bg-green-50 border border-green-100 rounded-lg px-3 py-2">
        <p class="text-xs font-medium text-green-700">Avg Response (24h)</p>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= avg_response.round(0) %>ms</p>
      </div>
    </div>

    <!-- Detail rows -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-700">
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Status</span>
          <span class="font-medium <%= @project.active? ? 'text-green-600' : 'text-red-600' %>">
            <%= @project.active? ? "Active" : "Inactive" %>
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Health Status</span>
          <span class="font-medium text-gray-900"><%= @project.computed_health_status.capitalize %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Environment</span>
          <span class="font-medium text-gray-900">
            <%= @project.environment.present? ? @project.environment.capitalize : "Not specified" %>
          </span>
        </div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Tech Stack</span>
          <span class="font-medium text-gray-900">
            <%= @project.tech_stack.present? ? @project.tech_stack.humanize : "Not specified" %>
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Created</span>
          <span class="font-medium text-gray-900"><%= @project.created_at.strftime("%b %d, %Y") %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">URL</span>
          <span class="font-medium text-gray-900 truncate max-w-xs">
            <%= @project.url %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
    <div class="space-y-3">
      <%= link_to project_issues_path(@project),
                  class: "w-full inline-flex items-center justify-between px-4 py-2 rounded-md border border-red-200 bg-red-50 text-sm font-medium text-red-700 hover:bg-red-100 transition-colors" do %>
        <span>View Issues</span>
        <span class="text-xs text-red-600"><%= @project_stats[:open_issues] %> open</span>
      <% end %>

      <%= link_to project_events_path(@project),
                  class: "w-full inline-flex items-center justify-between px-4 py-2 rounded-md border border-blue-200 bg-blue-50 text-sm font-medium text-blue-700 hover:bg-blue-100 transition-colors" do %>
        <span>View Events</span>
        <span class="text-xs text-blue-600"><%= number_with_delimiter(@project_stats[:events_total]) %> total</span>
      <% end %>

      <%= link_to project_performance_path(@project),
                  class: "w-full inline-flex items-center justify-between px-4 py-2 rounded-md border border-purple-200 bg-purple-50 text-sm font-medium text-purple-700 hover:bg-purple-100 transition-colors" do %>
        <span>Performance</span>
        <% avg_response = @performance_stats.values.sum / [@performance_stats.size, 1].max %>
        <span class="text-xs text-purple-600"><%= avg_response.round(0) %>ms avg</span>
      <% end %>
    </div>
  </div>
</div>

<!-- Recent Activity section removed (Recent Issues / Recent Events) -->
