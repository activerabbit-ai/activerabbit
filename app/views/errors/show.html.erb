<% content_for :page_title do %>
  Error Details
<% end %>

<!-- Breadcrumb -->
<nav class="flex mb-6" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <li class="inline-flex items-center">
      <%= link_to((@current_project || @project) ? "/#{(@current_project || @project).slug}/errors" : errors_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600") do %>
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0L2.586 11a2 2 0 010-2.828l3.707-3.707a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l3.293 3.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
        </svg>
        Errors
      <% end %>
    </li>
    <li>
      <div class="flex items-center">
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2"><%= @issue.exception_class %></span>
      </div>
    </li>
  </ol>
</nav>

<!-- Error Header -->
<div class="bg-white rounded-lg shadow mb-6">
  <!-- Main Header Bar -->
  <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
    <div class="flex items-start justify-between">
      <div class="flex items-start flex-1">
        <div class="flex-shrink-0">
          <div class="w-4 h-4 rounded-full <%= @issue.status == 'open' ? 'bg-red-400' : @issue.status == 'wip' ? 'bg-yellow-400' : 'bg-green-400' %> mt-1"></div>
        </div>
        <div class="ml-3 flex-1">
          <h1 class="text-xl font-semibold text-gray-900">
            <%= @issue.exception_class %>
            <% if @events.first&.context&.dig('error_type') %>
              <span class="text-sm text-gray-500">(<%= @events.first.context['error_type'] %>)</span>
            <% end %>
          </h1>
          <% if @issue.sample_message.present? %>
            <p class="text-gray-600 mt-1"><%= @issue.sample_message %></p>
          <% end %>
          <div class="flex items-center space-x-4 mt-2 text-sm text-gray-500">
            <span><strong>Project:</strong> <%= @issue.project&.name || 'Unknown' %></span>
            <span><strong>First seen:</strong> <%= time_ago_in_words(@issue.first_seen_at) %> ago</span>
            <span><strong>Last seen:</strong> <%= time_ago_in_words(@issue.last_seen_at) %> ago</span>
            <% if @events.first&.context&.dig('error', 'severity') %>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= @events.first.context['error']['severity'] == 'error' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @events.first.context['error']['severity'].upcase %>
              </span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="flex items-center space-x-4 ml-4">
        <% error_url = if @current_project
                         "/#{@current_project.slug}/errors/#{@issue.id}"
                       elsif @project
                         project_error_path(@project, @issue)
                       else
                         error_path(@issue)
                       end %>
        <%= render "errors/status_dropdown", issue: @issue, error_url: error_url %>

        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@issue.count) %></div>
          <div class="text-xs text-gray-500">occurrences</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Impact Metrics Bar -->
  <div class="px-6 py-3 bg-gray-50 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-6 text-sm">
        <div>
          <span class="text-gray-500">Seen:</span>
          <span class="ml-2 font-semibold text-gray-900"><%= number_with_delimiter(@issue.count) %> times</span>
        </div>
        <div>
          <span class="text-gray-500">Last 24h:</span>
          <span class="ml-2 font-semibold text-gray-900"><%= @events_24h %> occurrences</span>
        </div>
        <% if @unique_users_24h > 0 %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
            </svg>
            <span class="text-gray-500">Unique users:</span>
            <span class="ml-2 font-semibold text-red-600"><%= @unique_users_24h %></span>
          </div>
        <% end %>
        <% if @impact_percentage > 0 %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-500">Impact:</span>
            <span class="ml-2 font-semibold text-orange-600">~<%= @impact_percentage %>%</span>
            <span class="ml-1 text-xs text-gray-500">of all requests</span>
          </div>
        <% end %>
      </div>

      <% if @events.first&.context&.dig('error', 'severity') %>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= @events.first.context['error']['severity'] == 'error' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
          <%= @events.first.context['error']['severity'].upcase %>
        </span>
      <% end %>
    </div>
  </div>
</div>

<!-- Tabs: AI summary | Stack Trace | Samples | Graph -->
<% current_tab = case params[:tab]
when 'ai' then 'ai'
when 'samples' then 'samples'
when 'graph' then 'graph'
else 'stack'
end %>

<div class="bg-white rounded-lg shadow">
  <div class="px-6 pt-4 pb-4 mb-4">
    <div class="flex items-center justify-between">
      <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner" role="tablist" aria-label="Error detail tabs">
        <%= link_to url_for(params.permit!.to_h.merge(tab: 'stack', event_id: nil)), class: "px-4 py-2 rounded-full text-sm font-medium transition #{current_tab == 'stack' ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}", aria: { current: (current_tab == 'stack') } do %>
          Stack Trace
        <% end %>
        <%= link_to url_for(params.permit!.to_h.merge(tab: 'samples')), class: "ml-1 px-4 py-2 rounded-full text-sm font-medium transition #{current_tab == 'samples' ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}", aria: { current: (current_tab == 'samples') } do %>
          Samples
        <% end %>
        <%= link_to url_for(params.permit!.to_h.merge(tab: 'graph', event_id: nil)), class: "ml-1 px-4 py-2 rounded-full text-sm font-medium transition #{current_tab == 'graph' ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}", aria: { current: (current_tab == 'graph') } do %>
          Graph
        <% end %>
      </div>
      <div class="flex items-center space-x-2">
        <% connect_required = (@current_project || @project)&.settings&.dig('github_repo').blank? %>
        <% create_pr_path = if @current_project
                              project_slug_error_create_pr_path(@current_project.slug, @issue)
                            elsif @project
                              project_error_create_pr_path(@project, @issue)
                            else
                              nil
                            end %>

        <% if connect_required %>
          <% settings_link = if @current_project
                               project_slug_settings_path(@current_project.slug)
                             elsif @project
                               project_settings_path(@project)
                             else
                               settings_path
                             end %>
          <%= link_to "Connect GitHub", settings_link, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-normal rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% elsif create_pr_path %>
          <%= button_to create_pr_path, method: :post, form: { target: '_blank', data: { turbo: false } }, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-normal rounded-md text-white bg-[#24292e] hover:bg-black cursor-pointer" do %>
            <svg viewBox="0 0 16 16" width="16" height="16" class="mr-2" aria-hidden="true"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.5 7.5 0 012 0c1.53-1.03 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
            Open PR
          <% end %>

          <% pr_url = (@current_project || @project)&.settings&.dig('issue_pr_urls', @issue.id.to_s) %>
          <% if pr_url.present? %>
            <%= link_to pr_url, target: "_blank", rel: "noopener", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-normal rounded-md text-white bg-[#24292e] hover:bg-black cursor-pointer" do %>
              <svg viewBox="0 0 16 16" width="16" height="16" class="mr-2" aria-hidden="true"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.5 7.5 0 012 0c1.53-1.03 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
              Open on GitHub
            <% end %>
          <% end %>
        <% end %>

        <%= link_to url_for(params.permit!.to_h.merge(tab: 'ai', event_id: nil)), class: "inline-flex items-center px-4 py-2 rounded-full text-sm font-bold transition #{current_tab == 'ai' ? 'bg-white text-indigo-700 border-2 border-indigo-500 ring-2 ring-indigo-200 shadow' : 'bg-white text-gray-800 border-2 border-indigo-300 hover:border-indigo-400'}" do %>
          <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
            <rect x="7" y="7" width="10" height="10" rx="2" stroke-width="2"/>
            <path d="M12 2v3M12 19v3M2 12h3M19 12h3M5 5l2.121 2.121M19 5l-2.121 2.121M5 19l2.121-2.121M19 19l-2.121-2.121" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/>
            <rect x="11" y="11" width="2" height="2" fill="currentColor" stroke="none"/>
          </svg>
          AI summary
        <% end %>
      </div>
    </div>
  </div>

  <% if current_tab == 'ai' %>
    <div class="px-6 py-6 border-t border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-3">AI explanation</h3>
      <% if @ai_result && @ai_result[:summary] %>
        <div class="space-y-4">
          <div class="bg-white border border-gray-200 rounded-lg p-4">
            <div data-controller="markdown" data-markdown-content-value="<%= CGI.escapeHTML(@ai_result[:summary]) %>"></div>
          </div>
        </div>
      <% elsif @ai_result && @ai_result[:error] == 'missing_api_key' %>
        <div class="text-sm text-gray-600">Set <code>OPENAI_API_KEY</code> to enable AI summaries.</div>
      <% elsif @ai_result && @ai_result[:error] %>
        <div class="text-sm text-red-600">AI summary failed: <%= @ai_result[:message] %></div>
      <% else %>
        <div class="text-sm text-gray-600">Generating summary...</div>
      <% end %>
    </div>

  <% elsif current_tab == 'stack' %>
    <div class="px-6 py-4 border-t border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Stack Trace</h3>
      <div class="text-xs text-gray-500 mb-2"><strong>Top Frame:</strong></div>
      <div class="bg-gray-50 rounded p-3 mb-4">
        <code class="text-sm text-gray-800"><%= @issue.top_frame %></code>
      </div>

      <div class="text-xs text-gray-500 mb-2"><strong>Controller Action:</strong></div>
      <div class="bg-gray-50 rounded p-3 mb-4">
        <code class="text-sm text-gray-800"><%= @issue.controller_action %></code>
      </div>

      <% if @common_method.present? %>
        <div class="text-xs text-gray-500 mb-2"><strong>Method:</strong></div>
        <div class="bg-gray-50 rounded p-3 mb-4">
          <code class="text-sm text-gray-800"><%= @common_method %></code>
        </div>
      <% end %>

      <% if @issue.full_url.present? %>
        <div class="text-xs text-gray-500 mb-2"><strong>Full URL:</strong></div>
        <div class="bg-gray-50 rounded p-3 mb-4">
          <code class="text-sm text-indigo-600 break-all"><%= @issue.full_url %></code>
        </div>
      <% end %>

      <% if @events.first&.context&.dig('error', 'backtrace_preview') %>
        <div class="text-xs text-gray-500 mb-2"><strong>Backtrace Preview (important frames):</strong></div>
        <div class="bg-gray-50 rounded p-3">
          <% important = @events.first.context['error']['backtrace_preview'].select { |l| l.include?('/app/') || l.include?('/controllers/') || l.include?('/models/') || l.include?('/services/') }
             important = @events.first.context['error']['backtrace_preview'].first(5) if important.empty?
             full_text = important.join("\n")
             head_text = full_text[0, 500] || ''
             tail_text = full_text.length > 500 ? full_text[500, full_text.length] : ''
          %>
          <pre class="whitespace-pre-wrap"><code class="text-sm text-gray-800"><%= head_text %></code></pre>
          <% if tail_text.present? %>
            <details class="mt-2">
              <summary class="text-xs text-indigo-600 cursor-pointer select-none">More...</summary>
              <div class="mt-2">
                <pre class="whitespace-pre-wrap"><code class="text-sm text-gray-800"><%= tail_text %></code></pre>
              </div>
            </details>
          <% end %>
        </div>
      <% end %>
    </div>

  <% elsif current_tab == 'graph' %>
    <div class="border-t border-gray-200 px-6 py-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Error count over time</h3>
        <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
          <% %w[1H 4H 8H 12H 24H 48H 7D 30D].each do |rk| %>
            <% active = (@graph_range_key || '24H') == rk %>
            <%= link_to rk, url_for(params.permit!.to_h.merge(tab: 'graph', range: rk)), class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
          <% end %>
        </div>
      </div>

      <% if @graph_counts.present? && @graph_has_data %>
        <% labels = (@graph_labels || []).map { |t| case @graph_range_key; when '1H','4H','8H','12H','24H','48H' then t.strftime('%H:%M'); else t.strftime('%b %d'); end } %>
        <div class="relative" style="height: 300px;">
          <canvas data-controller="graph"
                  data-graph-labels-value='<%= labels.to_json %>'
                  data-graph-counts-value='<%= @graph_counts.to_json %>'
                  data-graph-range-value='<%= @graph_range_key %>'></canvas>
        </div>
      <% else %>
        <div class="text-center text-gray-500 py-8">No data for selected range</div>
      <% end %>
    </div>

  <% else %>
    <!-- Samples Table & Selected Sample Details -->
    <div class="border-t border-gray-200 px-6 py-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Samples</h3>
        <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
          <div class="px-4 py-2 text-xs text-gray-500">Click any value to apply a filter</div>
        </div>
      </div>

      <% if @events.any? %>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-0">
          <!-- Left: Selected sample details -->
          <div class="lg:col-span-2">
            <% if @selected_event %>
              <div class="px-2 py-2">
                <div class="flex items-center justify-between">
                  <h4 class="text-md font-medium text-gray-900">Tags for sample that occurred at</h4>
                  <div class="text-xs text-gray-500"><%= @selected_event.occurred_at.strftime('%b %-d %Y %H:%M:%S') %></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-3">
                  <div>
                    <dl class="divide-y divide-gray-200 text-[13px]">
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">hostname:</dt>
                        <dd class="mt-1 text-indigo-600 col-span-2 truncate"><%= @selected_event.server_name || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">method:</dt>
                        <dd class="mt-1 text-indigo-600 col-span-2"><%= @selected_event.request_method || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">path:</dt>
                        <dd class="mt-1 text-indigo-600 col-span-2 break-all"><%= @selected_event.request_path || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">request_id:</dt>
                        <dd class="mt-1 text-indigo-600 col-span-2 break-all"><%= @selected_event.request_id || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">response_status:</dt>
                        <dd class="mt-1 text-gray-700 col-span-2"><%= (@selected_event.context && (@selected_event.context['error_status'] || @selected_event.context[:error_status])) || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">revision:</dt>
                        <dd class="mt-1 text-gray-700 col-span-2"><%= @selected_event.release_version || '–' %></dd>
                      </div>
                    </dl>
                  </div>

                  <!-- Parameters / Session / Environment -->
                  <div>
                    <% ctx = @selected_event.context || {} %>
                    <% req = (ctx['request'] || ctx[:request] || {}) %>
                    <% routing = (ctx['routing'] || ctx[:routing] || {}) %>
                    <% params_hash = routing['params'] || routing[:params] || {} %>
                    <% session_hash = req['session'] || req[:session] || {} %>
                    <% env_hash = ctx['env'] || ctx[:env] || {} %>

                    <div class="mb-3">
                      <div class="text-sm font-medium text-gray-900 mb-1">Parameters</div>
                      <pre class="bg-gray-50 rounded p-3 text-xs overflow-x-auto"><%= JSON.pretty_generate(params_hash) rescue params_hash.inspect %></pre>
                    </div>
                    <div class="mb-3">
                      <div class="text-sm font-medium text-gray-900 mb-1">Session data</div>
                      <pre class="bg-gray-50 rounded p-3 text-xs overflow-x-auto"><%= JSON.pretty_generate(session_hash) rescue session_hash.inspect %></pre>
                    </div>
                    <div class="mb-3">
                      <div class="text-sm font-medium text-gray-900 mb-1">Environment</div>
                      <div class="grid grid-cols-1 gap-1 text-xs text-gray-700">
                        <% if req.present? %>
                          <% if req['accept'] || req[:accept] %>
                            <div><span class="text-gray-500">HTTP_ACCEPT:</span> <span class="break-all"><%= req['accept'] || req[:accept] %></span></div>
                          <% end %>
                          <% if req['accept_encoding'] || req[:accept_encoding] %>
                            <div><span class="text-gray-500">HTTP_ACCEPT_ENCODING:</span> <span class="break-all"><%= req['accept_encoding'] || req[:accept_encoding] %></span></div>
                          <% end %>
                          <% if req['accept_language'] || req[:accept_language] %>
                            <div><span class="text-gray-500">HTTP_ACCEPT_LANGUAGE:</span> <span class="break-all"><%= req['accept_language'] || req[:accept_language] %></span></div>
                          <% end %>
                          <% if req['path_info'] || req[:path_info] %>
                            <div><span class="text-gray-500">PATH_INFO:</span> <span class="break-all"><%= req['path_info'] || req[:path_info] %></span></div>
                          <% end %>
                          <% if req['request_method'] || req[:request_method] %>
                            <div><span class="text-gray-500">REQUEST_METHOD:</span> <span class="break-all"><%= req['request_method'] || req[:request_method] %></span></div>
                          <% end %>
                          <% if req['request_path'] || req[:request_path] %>
                            <div><span class="text-gray-500">REQUEST_PATH:</span> <span class="break-all"><%= req['request_path'] || req[:request_path] %></span></div>
                          <% end %>
                          <% if req['server_name'] || req[:server_name] %>
                            <div><span class="text-gray-500">SERVER_NAME:</span> <span class="break-all"><%= req['server_name'] || req[:server_name] %></span></div>
                          <% end %>
                          <% if req['server_port'] || req[:server_port] %>
                            <div><span class="text-gray-500">SERVER_PORT:</span> <span class="break-all"><%= req['server_port'] || req[:server_port] %></span></div>
                          <% end %>
                          <% if req['server_protocol'] || req[:server_protocol] %>
                            <div><span class="text-gray-500">SERVER_PROTOCOL:</span> <span class="break-all"><%= req['server_protocol'] || req[:server_protocol] %></span></div>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>

                <% if @selected_event.formatted_backtrace.any? %>
                  <div class="mt-4">
                    <div class="text-sm font-medium text-gray-900 mb-1">Backtrace (important frames)</div>
                    <div class="bg-gray-50 rounded p-3">
                      <% imp = @selected_event.formatted_backtrace.select { |l| l.include?('/app/') || l.include?('/controllers/') || l.include?('/models/') || l.include?('/services/') }
                         imp = @selected_event.formatted_backtrace.first(15) if imp.empty?
                         full_text = imp.join("\n")
                         head_text = full_text[0, 500] || ''
                         tail_text = full_text.length > 500 ? full_text[500, full_text.length] : ''
                      %>
                      <pre class="whitespace-pre-wrap"><code class="block text-xs text-gray-800"><%= head_text %></code></pre>
                      <% if tail_text.present? %>
                        <details class="mt-2">
                          <summary class="text-xs text-indigo-600 cursor-pointer select-none">More...</summary>
                          <div class="mt-2">
                            <pre class="whitespace-pre-wrap"><code class="block text-xs text-gray-800"><%= tail_text %></code></pre>
                          </div>
                        </details>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="px-6 py-10 text-center text-gray-500">Select a sample to view details</div>
            <% end %>
          </div>

          <!-- Right: Samples list -->
          <div class="border-l border-gray-200">
            <div class="px-4 py-2 text-xs text-gray-500">Recent samples</div>
            <div class="overflow-y-auto max-h-[40rem]">
              <ul class="divide-y divide-gray-100">
                <% @events.each do |event| %>
                  <% selected = (@selected_event && @selected_event.id == event.id) %>
                  <li class="hover:bg-gray-50 <%= selected ? 'bg-indigo-50' : '' %>">
                    <%= link_to url_for(params.permit!.to_h.merge(tab: 'samples', event_id: event.id)), class: "block px-4 py-2" do %>
                      <div class="flex items-center justify-between">
                        <div class="text-xs font-medium text-gray-900"><%= event.occurred_at.strftime('%b %-d %H:%M') %></div>
                        <% status = (event.context && (event.context['error_status'] || event.context[:error_status])) %>
                        <% if status.present? %>
                          <span class="ml-2 inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium bg-gray-100 text-gray-700"><%= status %></span>
                        <% end %>
                      </div>
                      <div class="mt-1 flex items-center space-x-2 text-[11px] text-gray-600">
                        <% if event.request_method.present? %>
                          <span class="inline-flex items-center px-1 py-0.5 rounded bg-gray-100 text-gray-700"><%= event.request_method %></span>
                        <% end %>
                        <% if event.server_name.present? %>
                          <span class="truncate"><%= event.server_name %></span>
                        <% end %>
                      </div>
                      <% if event.request_path.present? %>
                        <div class="mt-1 text-[11px] text-gray-500 truncate"><%= event.request_path %></div>
                      <% end %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% else %>
        <div class="p-4 text-center text-gray-500">
          No samples found
        </div>
      <% end %>
    </div>
  <% end %>
</div>
