<% content_for :page_title, "üê∞ ActiveRabbit Errors" %>

<!-- Summary Stats -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Total Errors</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @total_errors %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Open Issues</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @open_errors %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Recent (1hr)</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @recent_errors %></p>
      </div>
    </div>
  </div>
</div>

<!-- Errors List -->
<div class="bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-medium text-gray-900">üê∞ Captured Errors</h3>
      <div class="text-sm text-gray-500">
        <%= pluralize(@issues.count, 'error') %> shown
      </div>
    </div>
  </div>

    <% if @issues.any? %>
    <div class="divide-y divide-gray-200">
      <% @issues.each do |issue| %>
        <div class="p-6 hover:bg-gray-50 transition-colors">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="w-3 h-3 rounded-full <%= issue.status == 'open' ? 'bg-red-400' : issue.status == 'wip' ? 'bg-yellow-400' : 'bg-green-400' %> mt-1"></div>
                </div>
                <div class="ml-4 flex-1">
                  <div class="flex items-center space-x-2 mb-1">
                    <%= link_to admin_error_path(issue), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900 hover:underline" do %>
                      <%= issue.exception_class %>
                    <% end %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                      <%= issue.project&.name || 'Unknown Project' %>
                    </span>
                  </div>

                  <% if issue.sample_message.present? %>
                    <p class="text-sm text-gray-600 mb-2"><%= truncate(issue.sample_message, length: 100) %></p>
                  <% end %>

                  <div class="text-xs text-gray-500 space-y-1">
                    <div><strong>Controller:</strong> <%= issue.controller_action %></div>
                    <div><strong>Top Frame:</strong> <%= truncate(issue.top_frame, length: 80) %></div>
                    <div><strong>Last seen:</strong> <%= time_ago_in_words(issue.last_seen_at) %> ago</div>
                    <div><strong>First seen:</strong> <%= time_ago_in_words(issue.first_seen_at) %> ago</div>
                  </div>
                </div>
              </div>
            </div>

            <div class="flex items-center space-x-3 ml-4">
              <div class="text-right">
                <div class="text-sm font-medium text-gray-900"><%= issue.count %></div>
                <div class="text-xs text-gray-500">occurrences</div>
              </div>

              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= issue.status == 'open' ? 'bg-red-100 text-red-800' : issue.status == 'wip' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                <%= issue.status.upcase %>
              </span>

              <!-- Action Buttons -->
              <div class="flex items-center space-x-2">
                <%= link_to admin_error_path(issue), class: "inline-flex items-center px-2.5 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  View
                <% end %>

                <%= link_to admin_error_path(issue), method: :delete,
                    confirm: 'Are you sure you want to delete this error?',
                    class: "inline-flex items-center px-2.5 py-1.5 border border-red-300 shadow-sm text-xs font-medium rounded text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-12 text-center">
      <div class="w-12 h-12 mx-auto mb-4 text-gray-400">
        üê∞
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No errors captured yet</h3>
      <p class="text-gray-500 mb-4">ActiveRabbit is monitoring your applications. Errors will appear here when they occur.</p>
      <div class="text-sm text-gray-400">
        <p>Try triggering some test errors:</p>
        <code class="bg-gray-100 px-2 py-1 rounded">curl http://localhost:3001/test/exception</code>
      </div>
    </div>
  <% end %>
</div>
