<% content_for :page_title do %>
  Connect GitHub Repository
<% end %>

<!-- Main Content -->
<div class="max-w-2xl mx-auto">
  <!-- Progress indicator -->
  <div class="mb-8">
    <div class="flex items-center justify-center space-x-4">
      <div class="flex items-center">
        <span class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </span>
        <span class="ml-2 text-sm font-medium text-green-600">Project Created</span>
      </div>
      <div class="w-12 bg-green-500" style="height: 1px;"></div>
      <div class="flex items-center">
        <span class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </span>
        <span class="ml-2 text-sm font-medium text-green-600">Gem Installed</span>
      </div>
      <div class="w-12 bg-indigo-500" style="height: 1px;"></div>
      <div class="flex items-center">
        <span class="flex-shrink-0 w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">3</span>
        </span>
        <span class="ml-2 text-sm font-medium text-indigo-600">Connect GitHub</span>
      </div>
    </div>
  </div>

  <!-- Main Card -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-gray-800 px-8 py-10 text-center">
      <div class="mx-auto w-20 h-20 bg-gray-900 rounded-2xl flex items-center justify-center mb-6">
        <svg viewBox="0 0 16 16" width="48" height="48" class="text-white" aria-hidden="true">
          <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.5 7.5 0 012 0c1.53-1.03 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z"></path>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-300 mb-2">Connect Your GitHub Repository</h1>
      <p class="text-gray-300">Enable AI-powered automatic fixes for your errors</p>
    </div>

    <!-- Body -->
    <div class="px-8 py-8">
      <% if @github_connected %>
        <!-- Already connected state -->
        <div class="text-center py-4">
          <div class="mx-auto w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">GitHub Connected!</h3>
          <p class="text-gray-600 mb-6">Your repository is linked. AI autofix is ready to go.</p>
          <%= link_to dashboard_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            Go to Dashboard ‚Üí
          <% end %>
        </div>
      <% else %>
        <!-- Benefits list -->
        <div class="space-y-4 mb-8">
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Why connect GitHub?</h3>
          
          <div class="flex items-start">
            <span class="flex-shrink-0 w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
              <span class="text-purple-600">ü§ñ</span>
            </span>
            <div>
              <h4 class="text-sm font-medium text-gray-900">AI-Generated Fixes</h4>
              <p class="text-sm text-gray-500">Our AI analyzes errors and generates code patches automatically</p>
            </div>
          </div>

          <div class="flex items-start">
            <span class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
              <span class="text-blue-600">üìù</span>
            </span>
            <div>
              <h4 class="text-sm font-medium text-gray-900">Automatic Pull Requests</h4>
              <p class="text-sm text-gray-500">One-click PR creation with detailed explanations and tests</p>
            </div>
          </div>

          <div class="flex items-start">
            <span class="flex-shrink-0 w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center mr-4">
              <span class="text-amber-600">üõ°Ô∏è</span>
            </span>
            <div>
              <h4 class="text-sm font-medium text-gray-900">Safe Draft PRs</h4>
              <p class="text-sm text-gray-500">All PRs are created as <strong>drafts</strong> ‚Äî nothing merges without your review</p>
            </div>
          </div>

          <div class="flex items-start">
            <span class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-4">
              <span class="text-green-600">‚ö°</span>
            </span>
            <div>
              <h4 class="text-sm font-medium text-gray-900">Fix Errors in Seconds</h4>
              <p class="text-sm text-gray-500">Reduce debugging time from hours to minutes</p>
            </div>
          </div>
        </div>

        <!-- Action buttons -->
        <div class="space-y-4">
          <a href="<%= @github_install_url %>"
             class="w-full inline-flex items-center justify-center px-6 py-4 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all">
            <svg viewBox="0 0 16 16" width="20" height="20" class="mr-3" aria-hidden="true">
              <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.5 7.5 0 012 0c1.53-1.03 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z"></path>
            </svg>
            Install ActiveRabbit GitHub App
          </a>

          <% if @github_connected_projects.present? %>
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-200"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-4 bg-white text-gray-500">or use existing connection</span>
              </div>
            </div>

            <!-- Copy from existing project -->
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
              <h4 class="text-sm font-medium text-gray-900 mb-2">Use existing GitHub connection</h4>
              <p class="text-xs text-gray-600 mb-3">
                You have GitHub connected to other projects. Use the same repository for this project.
              </p>
              <%= form_with url: onboarding_setup_github_path(@project), method: :post, local: true do |form| %>
                <div class="flex items-end gap-3">
                  <div class="flex-1">
                    <label class="block text-xs font-medium text-gray-700 mb-1">Copy settings from:</label>
                    <%= form.select :copy_github_from_project_id,
                        @github_connected_projects.map { |p| ["#{p.name} (#{p.settings['github_repo']})", p.id] },
                        { include_blank: "Select a project..." },
                        class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-white" %>
                  </div>
                  <%= form.submit "Use This Connection",
                      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                </div>
              <% end %>
            </div>
          <% end %>

          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 bg-white text-gray-500">or</span>
            </div>
          </div>

          <%= link_to dashboard_path, class: "w-full inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all" do %>
            Skip for now, I'll connect later
          <% end %>
        </div>

        <!-- Permission note -->
        <div class="mt-6 flex items-start text-xs text-gray-500">
          <svg class="w-4 h-4 mr-2 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          <span>
            <strong>Required permissions:</strong> Pull requests (read/write) and Contents (read).
            We only access repositories you explicitly grant access to.
          </span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Project info -->
  <div class="mt-6 text-center text-sm text-gray-500">
    Setting up: <strong class="text-gray-700"><%= @project.name %></strong>
  </div>
</div>
