<% content_for :page_title do %>
  Settings
<% end %>

<div class="max-w-4xl mx-auto space-y-6">
  <!-- Application Settings -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Application Settings</h3>
    </div>
    <div class="p-6">
      <div class="space-y-6">
        <% @settings.each do |key, value| %>
          <div class="flex items-center justify-between py-4 border-b border-gray-200 last:border-b-0">
            <div>
              <p class="text-sm font-medium text-gray-900 capitalize"><%= key.to_s.humanize %></p>
              <p class="text-sm text-gray-500">Configure <%= key.to_s.humanize.downcase %></p>
            </div>
            <div class="flex items-center">
              <% if value.is_a?(TrueClass) || value.is_a?(FalseClass) %>
                <button class="relative inline-flex h-6 w-11 items-center rounded-full <%= value ? 'bg-blue-600' : 'bg-gray-200' %> transition-colors">
                  <span class="inline-block h-4 w-4 transform rounded-full bg-white transition-transform <%= value ? 'translate-x-6' : 'translate-x-1' %>"></span>
                </button>
              <% else %>
                <span class="text-sm text-gray-900 font-medium"><%= value %></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if @account %>
    <!-- Slack Integration Settings -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-purple-600 mr-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52-2.523c0-1.393 1.135-2.524 2.52-2.524h2.52v2.524c0 1.393-1.127 2.523-2.52 2.523zm0 0c-1.393 0-2.52 1.135-2.52 2.523v2.52c0 1.393 1.127 2.524 2.52 2.524 1.393 0 2.523-1.131 2.523-2.524v-2.52c0-1.388-1.13-2.523-2.523-2.523zm7.12-7.12a2.528 2.528 0 0 1-2.523-2.52c0-1.393 1.135-2.524 2.523-2.524 1.393 0 2.524 1.131 2.524 2.524v2.52c0 1.393-1.131 2.52-2.524 2.52zm0 0c1.393 0 2.524 1.127 2.524 2.52v2.523c0 1.393-1.131 2.524-2.524 2.524-1.388 0-2.523-1.131-2.523-2.524V15.685c0-1.393 1.135-2.52 2.523-2.52z"/>
            </svg>
            <div>
              <h3 class="text-lg font-medium text-gray-900">Slack Integration</h3>
              <p class="text-sm text-gray-500">Configure account-wide Slack notifications</p>
            </div>
          </div>
          <div class="flex items-center">
            <% if @account.slack_configured? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Configured
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                Not Configured
              </span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="p-6">
        <%= form_with(model: @account, url: update_slack_settings_settings_path, method: :patch, local: true, class: "space-y-6") do |form| %>

          <!-- Webhook URL -->
          <div>
            <label for="account_slack_webhook_url" class="block text-sm font-medium text-gray-700 mb-2">
              Slack Webhook URL
              <span class="text-red-500">*</span>
            </label>

            <% if @account.slack_webhook_from_env? %>
              <div class="mb-3 p-3 bg-green-50 border border-green-200 rounded-md">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-sm text-green-800 font-medium">Webhook URL configured via environment variable</span>
                </div>
                <p class="text-xs text-green-700 mt-1">
                  Using secure environment variable for webhook URL. This is the recommended approach for production.
                </p>
              </div>
            <% end %>

            <%= form.url_field :slack_webhook_url,
                  value: @account.slack_webhook_from_env? ? '' : @account.slack_webhook_url,
                  placeholder: @account.slack_webhook_from_env? ? "Configured via environment variable" : "https://hooks.slack.com/services/...",
                  disabled: @account.slack_webhook_from_env?,
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'bg-gray-50 text-gray-500' if @account.slack_webhook_from_env?}" %>

            <p class="mt-1 text-xs text-gray-500">
              Get your webhook URL from
              <a href="https://api.slack.com/apps" target="_blank" class="text-blue-600 hover:text-blue-500">
                Slack Apps â†’ Incoming Webhooks
              </a>
            </p>
          </div>

          <!-- Channel -->
          <div>
            <label for="account_slack_channel" class="block text-sm font-medium text-gray-700 mb-2">
              Default Slack Channel
            </label>
            <%= form.text_field :slack_channel,
                  value: @account.slack_channel,
                  placeholder: "#alerts",
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            <p class="mt-1 text-xs text-gray-500">
              Default channel for account notifications. Users can override with personal channels.
            </p>
          </div>

          <!-- Enable/Disable Toggle -->
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= form.check_box :slack_notifications_enabled,
                    checked: @account.slack_notifications_enabled?,
                    class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <label for="account_slack_notifications_enabled" class="ml-2 block text-sm text-gray-900">
                Enable account-wide Slack notifications
              </label>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex items-center justify-between pt-4 border-t border-gray-200">
            <div class="flex space-x-3">
              <%= form.submit "Save Settings",
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

              <% if @account.slack_configured? %>
                <%= button_to "Test Notification",
                      test_slack_notification_settings_path,
                      method: :post,
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              <% end %>
            </div>

            <% if @account.slack_configured? %>
              <%= form.submit "Save & Test",
                    name: "test_slack",
                    value: "true",
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Personal Notification Preferences -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Your Personal Notification Preferences</h3>
        <p class="text-sm text-gray-500">Configure which notifications you want to receive and where</p>
      </div>
      <div class="p-6">
        <% if @user_preferences %>
          <%= form_with(url: update_user_slack_preferences_settings_path, method: :patch, local: true, class: "space-y-4") do |form| %>

            <!-- Personal Channel Override -->
            <div>
              <label for="preferences_personal_channel" class="block text-sm font-medium text-gray-700 mb-2">
                Personal Slack Channel (Optional)
              </label>
              <%= form.text_field :personal_channel,
                    value: @user_preferences['personal_channel'],
                    placeholder: "Leave empty to use account default (#{@account.slack_channel})",
                    class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              <p class="mt-1 text-xs text-gray-500">
                Set a personal channel (e.g., #my-alerts or @username) to receive notifications separately
              </p>
            </div>

            <!-- Notification Type Preferences -->
            <div class="space-y-3">
              <h4 class="text-sm font-medium text-gray-900">Notification Types</h4>

              <div class="space-y-2">
                <div class="flex items-center">
                  <%= form.check_box :error_notifications,
                        checked: @user_preferences['error_notifications'],
                        class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                  <label for="preferences_error_notifications" class="ml-2 text-sm text-gray-700">
                    Error frequency alerts
                  </label>
                </div>

                <div class="flex items-center">
                  <%= form.check_box :performance_notifications,
                        checked: @user_preferences['performance_notifications'],
                        class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                  <label for="preferences_performance_notifications" class="ml-2 text-sm text-gray-700">
                    Performance alerts (slow response times)
                  </label>
                </div>

                <div class="flex items-center">
                  <%= form.check_box :n_plus_one_notifications,
                        checked: @user_preferences['n_plus_one_notifications'],
                        class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                  <label for="preferences_n_plus_one_notifications" class="ml-2 text-sm text-gray-700">
                    N+1 query detection alerts
                  </label>
                </div>

                <div class="flex items-center">
                  <%= form.check_box :new_issue_notifications,
                        checked: @user_preferences['new_issue_notifications'],
                        class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                  <label for="preferences_new_issue_notifications" class="ml-2 text-sm text-gray-700">
                    New issue alerts
                  </label>
                </div>
              </div>
            </div>

            <div class="pt-4">
              <%= form.submit "Save My Preferences",
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">Please configure account Slack settings first to manage your personal preferences.</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
