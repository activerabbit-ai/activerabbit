<% content_for :page_title do %>
  Performance
<% end %>

<!-- Performance Metrics Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Avg Response Time</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @metrics[:response_time] %></p>
      </div>
      <div class="p-3 rounded-full bg-blue-100 text-blue-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Total Requests</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @metrics[:throughput] %></p>
      </div>
      <div class="p-3 rounded-full bg-green-100 text-green-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Error Rate</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @metrics[:error_rate] %></p>
      </div>
      <div class="p-3 rounded-full bg-red-100 text-red-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Slow Requests</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @metrics[:slow_requests] || "0" %></p>
      </div>
      <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Performance Issues Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold text-gray-900">ðŸš€ Performance Issues</h2>
      <div class="text-sm text-gray-500">
        <%= @project ? "#{@project.name} Performance" : "All Projects" %>
      </div>
    </div>
  </div>

  <% # Create mock performance data for display %>
  <% mock_performance_issues = [
    {
      action: "HomeController#index",
      avg_response_time: "245ms",
      p95_response_time: "890ms",
      total_requests: 1247,
      error_count: 3,
      status: "slow",
      first_seen: 2.days.ago,
      last_seen: 1.hour.ago
    },
    {
      action: "UsersController#show",
      avg_response_time: "156ms",
      p95_response_time: "432ms",
      total_requests: 892,
      error_count: 0,
      status: "healthy",
      first_seen: 5.days.ago,
      last_seen: 30.minutes.ago
    },
    {
      action: "TestController#performance_test",
      avg_response_time: "175ms",
      p95_response_time: "350ms",
      total_requests: 45,
      error_count: 2,
      status: "healthy",
      first_seen: 1.day.ago,
      last_seen: 5.minutes.ago
    }
  ] %>

  <% if @project && (@rollups.any? || true) %>
    <!-- Performance Issues Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Action
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Avg Response
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              P95 Response
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total Requests
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Last Seen
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% mock_performance_issues.each_with_index do |perf_issue, idx| %>
            <tr class="hover:bg-gray-50 hover:cursor-pointer transition-colors" onclick="window.location.href='<%= project_performance_issue_path(@project, idx + 1) %>'">
              <td class="px-6 py-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-2 h-2 rounded-full mt-2 mr-3 <%= perf_issue[:status] == 'slow' ? 'bg-yellow-400' : perf_issue[:error_count] > 0 ? 'bg-red-400' : 'bg-green-400' %>"></div>
                  <div>
                    <div class="text-sm font-medium text-indigo-600 hover:text-indigo-900">
                      <%= perf_issue[:action] %>
                    </div>
                    <div class="text-xs text-gray-500 mt-1">
                      <% if perf_issue[:error_count] > 0 %>
                        <%= perf_issue[:error_count] %> errors
                      <% else %>
                        No errors
                      <% end %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900">
                  <%= perf_issue[:avg_response_time] %>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900">
                  <%= perf_issue[:p95_response_time] %>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-semibold text-gray-900">
                  <%= number_with_delimiter(perf_issue[:total_requests]) %>
                </div>
              </td>
              <td class="px-6 py-4">
                <% if perf_issue[:status] == 'slow' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    Slow
                  </span>
                <% elsif perf_issue[:error_count] > 0 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Issues
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Healthy
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">
                  <%= time_ago_in_words(perf_issue[:last_seen]) %> ago
                </div>
                <div class="text-xs text-gray-500">
                  First seen: <%= time_ago_in_words(perf_issue[:first_seen]) %> ago
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% elsif @projects && @projects.any? %>
    <!-- Global Projects Performance Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Project
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Avg Response Time
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              P95 Response Time
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total Requests
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Error Count
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @projects.each do |project| %>
            <% stats = @global_stats[project.id] %>
            <tr class="hover:bg-gray-50 hover:cursor-pointer transition-colors" onclick="window.location.href='<%= project_performance_path(project) %>'">
              <td class="px-6 py-4">
                <div class="flex items-center">
                  <div class="flex-shrink-0 w-2 h-2 rounded-full <%= stats[:error_count] > 0 ? 'bg-red-400' : stats[:avg_response_time] && stats[:avg_response_time] > 1000 ? 'bg-yellow-400' : 'bg-green-400' %> mr-3"></div>
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= project.name %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= project.description || "Environment: #{project.environment}" %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">
                  <%= stats[:avg_response_time] ? "#{stats[:avg_response_time]}ms" : "N/A" %>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">
                  <%= stats[:p95_response_time] ? "#{stats[:p95_response_time]}ms" : "N/A" %>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-semibold text-gray-900">
                  <%= stats[:total_requests] %>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">
                  <%= stats[:error_count] %>
                </div>
              </td>
              <td class="px-6 py-4">
                <% if stats[:error_count] > 0 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Issues
                  </span>
                <% elsif stats[:avg_response_time] && stats[:avg_response_time] > 1000 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    Slow
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Healthy
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <!-- No Data State -->
    <div class="p-12 text-center">
      <div class="w-12 h-12 mx-auto mb-4 text-gray-400">
        ðŸš€
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No performance data yet</h3>
      <p class="text-gray-500 mb-4">ActiveRabbit is monitoring your applications. Performance data will appear here once your app starts sending metrics.</p>
      <div class="text-sm text-gray-400">
        <p>Try triggering some test performance data:</p>
        <code class="bg-gray-100 px-2 py-1 rounded">curl http://localhost:3001/test/performance</code>
      </div>
    </div>
  <% end %>
</div>
