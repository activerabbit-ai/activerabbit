<% if defined?(current_user) && current_user && current_user.account %>
  <% account = current_user.account %>
  <% suppress_once = session[:suppress_billing_banner] == true %>
  <%
    # Valid plans that don't need generic "choose a plan" warning
    valid_plans = ["free", "trial", "team", "business"]
    has_chosen_plan = valid_plans.include?(account.current_plan.to_s.downcase)

    # Trial state
    trial_active = account.on_trial?
    trial_days_left =
      if account.trial_ends_at
        [(account.trial_ends_at.to_date - Date.current).to_i, 0].max
      end

    # Trial/subscription state
    trial_expired_no_payment = account.trial_expired_without_payment?

    # Show upgrade banner when trial ended, there is no active subscription,
    # and user hasn't explicitly chosen a plan (free/team/business).
    needs_subscription = !trial_active && !account.active_subscription? && !has_chosen_plan && !suppress_once && !trial_expired_no_payment
  %>

  <%# Trial expired without payment method - downgraded to Free plan %>
  <% if trial_expired_no_payment %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mx-6 mt-4 rounded">
      <div class="flex items-start justify-between">
        <div class="flex items-start">
          <svg class="h-5 w-5 text-red-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800">
              Your trial has ended â€“ you've been moved to the <strong>Free</strong> plan.
            </p>
            <p class="mt-1 text-xs text-red-700">
              Subscribe to a paid plan to unlock higher limits.
            </p>
          </div>
        </div>
        <div class="flex items-center space-x-2">
          <%= link_to "ðŸš€ Upgrade Now", plan_path, class: "inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
          <%= link_to "View Usage", usage_path, class: "inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-md text-red-700 bg-white border border-red-200 hover:bg-red-50" %>
        </div>
      </div>
    </div>

  <%# Trial active - subscribe CTA %>
  <% elsif trial_active %>
    <div class="bg-indigo-50 border-l-4 border-indigo-500 p-4 mx-6 mt-4 rounded">
      <div class="flex items-start justify-between">
        <div class="flex items-start">
          <svg class="h-5 w-5 text-indigo-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="ml-3">
            <p class="text-sm text-indigo-900">
              <strong><%= account.effective_plan_name %></strong> trial
              <% if trial_days_left %>
                â€“ <strong><%= trial_days_left %> day<%= "s" unless trial_days_left == 1 %></strong> left.
              <% end %>
            </p>
            <p class="mt-1 text-xs text-indigo-700">
              Subscribe to a plan to keep monitoring uninterrupted after your trial ends.
            </p>
          </div>
        </div>
        <div class="flex items-center space-x-2">
          <%= link_to "Choose Plan", plan_path, class: "inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          <%= link_to "View Usage", usage_path, class: "inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-md text-indigo-700 bg-white border border-indigo-200 hover:bg-indigo-50" %>
        </div>
      </div>
    </div>
  <% end %>

  <% if needs_subscription %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mx-6 mt-4 rounded">
      <div class="flex items-start justify-between">
        <div class="flex items-start">
          <svg class="h-5 w-5 text-yellow-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="ml-3 text-sm text-yellow-800">
            Your trial ended. Subscribe to a paid plan or stay on Free.
          </p>
        </div>
        <div>
          <%= link_to "Choose a plan", plan_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      </div>
    </div>
  <% end %>

  <% if suppress_once %>
    <% session.delete(:suppress_billing_banner) %>
  <% end %>
<% end %>
