# Kamal secrets file template
# Copy this to .kamal/secrets and fill in your actual values

# Rails application secrets (generate with: rails secret)
RAILS_MASTER_KEY=your-rails-master-key-here
SECRET_KEY_BASE=your-secret-key-base-here

# Ubicloud PostgreSQL Database URL
# Get this from your Ubicloud PostgreSQL instance
DATABASE_URL=postgresql://username:password@host:port/database_name
ACTIVERABBIT_DATABASE_PASSWORD=your-db-password

# Redis URL (points to the Redis accessory on your Hetzner server)
REDIS_URL=redis://YOUR_HETZNER_SERVER_IP:6379/0

# Docker Registry credentials (if using Docker Hub, use your username/token)
KAMAL_REGISTRY_PASSWORD=your-docker-registry-password

# Stripe Configuration (get from Stripe dashboard)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_SIGNING_SECRET=whsec_your_webhook_secret

# SMTP Configuration for sending emails
SMTP_PASSWORD=your-smtp-password
