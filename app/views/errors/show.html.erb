<% content_for :page_title do %>
  Error Details
<% end %>

<!-- Breadcrumb + Prev/Next navigation -->
<nav class="flex items-center justify-between mb-6" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <li class="inline-flex items-center">
      <%= link_to((@current_project || @project) ? "/#{(@current_project || @project).slug}/errors" : errors_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600") do %>
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0L2.586 11a2 2 0 010-2.828l3.707-3.707a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l3.293 3.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
        </svg>
        Errors
      <% end %>
    </li>
    <li>
      <div class="flex items-center">
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2"><%= @issue.exception_class %></span>
      </div>
    </li>
  </ol>

  <div class="inline-flex items-center space-x-2 text-sm">
    <% prev_issue = @prev_issue || @issue %>
    <% next_issue = @next_issue || @issue %>

    <% prev_url = if @current_project
                    "/#{@current_project.slug}/errors/#{prev_issue.id}"
                  elsif @project
                    project_error_path(@project, prev_issue)
                  else
                    error_path(prev_issue)
                  end %>
    <%= link_to prev_url, class: "inline-flex items-center px-2 py-1 rounded-md text-gray-600 hover:text-indigo-700 hover:bg-gray-100" do %>
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M12.707 14.707a1 1 0 01-1.414 0L7.586 11.414a2 2 0 010-2.828L11.293 4.88a1 1 0 111.414 1.415L9.414 10l3.293 3.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
      </svg>
      Prev error
    <% end %>

    <% next_url = if @current_project
                    "/#{@current_project.slug}/errors/#{next_issue.id}"
                  elsif @project
                    project_error_path(@project, next_issue)
                  else
                    error_path(next_issue)
                  end %>
    <%= link_to next_url, class: "inline-flex items-center px-2 py-1 rounded-md text-gray-600 hover:text-indigo-700 hover:bg-gray-100" do %>
      Next error
      <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 4.293a1 1 0 011.414 0L12.414 8a2 2 0 010 2.828l-3.707 3.707a1 1 0 01-1.414-1.415L10.586 10 7.293 6.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    <% end %>
  </div>
</nav>

<!-- Error Header -->
<div class="bg-white rounded-lg shadow mb-6">
  <!-- Main Header Bar -->
  <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
    <div class="flex items-start justify-between">
      <div class="flex items-start flex-1">
        <div class="flex-shrink-0">
          <div class="w-4 h-4 rounded-full <%= @issue.status == 'open' ? 'bg-red-400' : @issue.status == 'wip' ? 'bg-yellow-400' : 'bg-green-400' %> mt-1"></div>
        </div>
        <div class="ml-3 flex-1">
          <h1 class="text-xl font-semibold text-gray-900">
            <%= @issue.exception_class %>
            <% if @events.first&.context&.dig('error_type') %>
              <span class="text-sm text-gray-500">(<%= @events.first.context['error_type'] %>)</span>
            <% end %>
          </h1>
        </div>
      </div>
    </div>
    <% if (explanation = error_explanation(@issue.exception_class)).present? %>
      <div class="mt-3 flex items-center justify-between bg-blue-50 border border-blue-100 rounded-lg px-4 py-3">
        <div class="flex items-start flex-1 mr-4">
          <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-base text-blue-800 leading-relaxed"><%= explanation %></p>
        </div>
        <div class="flex items-center space-x-4 flex-shrink-0">
          <% error_url = if @current_project
                           "/#{@current_project.slug}/errors/#{@issue.id}"
                         elsif @project
                           project_error_path(@project, @issue)
                         else
                           error_path(@issue)
                         end %>
          <%= render "errors/status_dropdown", issue: @issue, error_url: error_url %>
          <div class="text-center pl-4 border-l border-blue-200">
            <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@issue.count) %></div>
            <div class="text-xs text-gray-500">occurrences</div>
          </div>
        </div>
      </div>
    <% end %>
    <% if @issue.sample_message.present? %>
      <% title_message = @issue.sample_message.to_s %>
      <div class="mt-2" data-controller="message-toggle">
        <div class="flex items-center" data-message-toggle-target="short">
          <span class="text-gray-400 text-sm">...</span>
          <button type="button"
                  class="text-gray-500 hover:text-indigo-600 text-xs ml-2 underline"
                  data-action="click->message-toggle#toggle">
            Show raw message
          </button>
        </div>
        <div class="hidden bg-gray-50 rounded-md px-3 py-2 mt-1" data-message-toggle-target="full">
          <p class="font-mono text-sm text-gray-600 break-all"><%= title_message %></p>
          <button type="button"
                  class="text-gray-500 hover:text-indigo-600 text-xs mt-1 underline"
                  data-action="click->message-toggle#toggle">
            Hide
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <% unless error_explanation(@issue.exception_class).present? %>
    <!-- Fallback status/occurrences when no explanation -->
    <div class="px-6 py-3 border-b border-gray-200 flex justify-end">
      <div class="flex items-center space-x-4">
        <% error_url = if @current_project
                         "/#{@current_project.slug}/errors/#{@issue.id}"
                       elsif @project
                         project_error_path(@project, @issue)
                       else
                         error_path(@issue)
                       end %>
        <%= render "errors/status_dropdown", issue: @issue, error_url: error_url %>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@issue.count) %></div>
          <div class="text-xs text-gray-500">occurrences</div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Impact Metrics Bar -->
  <div class="px-6 py-3 bg-gray-50 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-6 text-sm">
        <div>
          <span class="text-gray-500">Seen:</span>
          <span class="ml-2 font-semibold text-gray-900"><%= number_with_delimiter(@issue.count) %> times</span>
        </div>
        <div>
          <span class="text-gray-500">Last 24h:</span>
          <span class="ml-2 font-semibold text-gray-900"><%= @events_24h %> occurrences</span>
        </div>
        <div>
          <span class="text-gray-500">First seen:</span>
          <span class="ml-2 font-semibold text-gray-900"><%= time_ago_in_words(@issue.first_seen_at) %> ago</span>
        </div>
        <div>
          <span class="text-gray-500">Last seen:</span>
          <span class="ml-2 font-semibold text-gray-900"><%= time_ago_in_words(@issue.last_seen_at) %> ago</span>
        </div>
        <% if @unique_users_24h > 0 %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
            </svg>
            <span class="text-gray-500">Unique users:</span>
            <span class="ml-2 font-semibold text-red-600"><%= @unique_users_24h %></span>
          </div>
        <% end %>
        <% if @impact_percentage > 0 %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-500">Impact:</span>
            <span class="ml-2 font-semibold <%= @impact_percentage > 50 ? 'text-red-600' : 'text-gray-900' %>">~<%= @impact_percentage %>%</span>
            <span class="ml-1 text-xs text-gray-500">of all requests</span>
          </div>
        <% end %>
      </div>

      <% if @events.first&.context&.dig('error', 'severity') %>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold <%= @events.first.context['error']['severity'] == 'error' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
          <%= @events.first.context['error']['severity'].upcase %>
        </span>
      <% end %>
    </div>
  </div>
</div>

<!-- Tabs: AI summary | Stack Trace | Samples | Graph -->
<% current_tab = case params[:tab]
when 'ai' then 'ai'
when 'samples' then 'samples'
when 'graph' then 'graph'
else 'stack'
end %>

<div class="bg-white rounded-lg shadow" data-controller="ai-inline">
  <div class="px-6 pt-4 pb-4 mb-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner" role="tablist" aria-label="Error detail tabs">
          <%= link_to url_for(params.permit!.to_h.merge(tab: 'stack', event_id: nil)), class: "px-4 py-2 rounded-full text-sm font-medium transition #{current_tab == 'stack' ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}", aria: { current: (current_tab == 'stack') } do %>
            Stack Trace
          <% end %>
          <%= link_to url_for(params.permit!.to_h.merge(tab: 'samples')), class: "ml-1 px-4 py-2 rounded-full text-sm font-medium transition #{current_tab == 'samples' ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}", aria: { current: (current_tab == 'samples') } do %>
            Samples
          <% end %>
          <%= link_to url_for(params.permit!.to_h.merge(tab: 'graph', event_id: nil)), class: "ml-1 px-4 py-2 rounded-full text-sm font-medium transition #{current_tab == 'graph' ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}", aria: { current: (current_tab == 'graph') } do %>
            Graph
          <% end %>
        </div>

        <%# AI Summary Button - toggles inline panel in stack trace %>
        <% if @issue.ai_summary.present? %>
          <button type="button"
                  id="ai-analysis"
                  class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold transition bg-gradient-to-r from-indigo-500 to-violet-500 text-white shadow-md hover:shadow-lg hover:from-indigo-600 hover:to-violet-600"
                  data-action="click->ai-inline#toggle"
                  data-ai-inline-target="toggleBtn">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            AI Analysis
            <svg class="w-4 h-4 ml-1 transform transition-transform" data-ai-inline-target="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        <% else %>
          <% regenerate_url = if @current_project
                                project_slug_error_regenerate_ai_summary_path(@current_project.slug, @issue)
                              elsif @project
                                regenerate_ai_summary_project_error_path(@project, @issue)
                              else
                                regenerate_ai_summary_error_path(@issue)
                              end %>
          <% account = current_user&.account %>
          <% quota_exceeded = account && !account.within_quota?(:ai_summaries) %>
          <% upgrade_url = plan_path rescue "/plan" %>

          <% if quota_exceeded %>
            <% _plan_key = account&.send(:effective_plan_key) rescue :free %>
            <% _is_paid_plan = %i[team business].include?(_plan_key) %>
            <% _cta_url = _is_paid_plan ? (billing_portal_index_path rescue upgrade_url) : upgrade_url %>
            <% _cta_label = _is_paid_plan ? "Buy More" : "Upgrade" %>
            <%# Quota exceeded: show upgrade / buy-more button instead of generate button %>
            <div id="ai-analysis" class="inline-flex flex-col items-start">
              <% if _is_paid_plan %>
                <%# Team/Business — "Buy More" via billing portal %>
                <%= button_to _cta_url, method: :post, data: { turbo: false }, form: { target: "_blank" }, class: "group inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-semibold transition-all bg-gradient-to-r from-indigo-500/10 to-violet-500/10 text-indigo-700 border border-indigo-200 hover:from-indigo-600 hover:to-violet-600 hover:text-white hover:border-transparent hover:shadow-lg hover:shadow-indigo-200/50 cursor-pointer" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                  <span>AI Analysis</span>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wide bg-emerald-100 text-emerald-700 group-hover:bg-white/20 group-hover:text-white transition-colors">
                    Buy More
                  </span>
                <% end %>
              <% else %>
                <%# Free/Trial — "Upgrade" to plan page %>
                <a href="<%= upgrade_url %>"
                   class="group inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-semibold transition-all bg-gradient-to-r from-indigo-500/10 to-violet-500/10 text-indigo-700 border border-indigo-200 hover:from-indigo-600 hover:to-violet-600 hover:text-white hover:border-transparent hover:shadow-lg hover:shadow-indigo-200/50">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                  <span>AI Analysis</span>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wide bg-indigo-100 text-indigo-600 group-hover:bg-white/20 group-hover:text-white transition-colors">
                    Upgrade
                  </span>
                </a>
              <% end %>
              <% if _is_paid_plan %>
                <p class="mt-1.5 text-xs text-gray-400 pl-1">
                  <%= account&.ai_summaries_used_in_period || 0 %>/<%= account&.ai_summaries_quota || 0 %> used on <%= account&.effective_plan_name || "Free" %>
                </p>
              <% end %>
            </div>
          <% else %>
            <%# Normal generate AI button %>
            <div id="ai-analysis"
                 data-controller="generate-ai"
                 data-generate-ai-url-value="<%= regenerate_url %>"
                 class="inline-flex flex-col items-start">
              <div class="inline-flex items-center">
                <button type="button"
                        class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold transition bg-gradient-to-r from-gray-400 to-gray-500 text-white shadow hover:from-indigo-500 hover:to-violet-500 cursor-pointer disabled:opacity-75 disabled:cursor-wait"
                        data-generate-ai-target="button"
                        data-action="click->generate-ai#generate">
                  <!-- Spinner (hidden by default) -->
                  <svg data-generate-ai-target="spinner" class="hidden animate-spin w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <!-- Lightning icon (shown by default) -->
                  <svg data-generate-ai-target="icon" class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                  <span data-generate-ai-target="buttonText">Generate AI</span>
                </button>
                <!-- Wait text (hidden by default) -->
                <span data-generate-ai-target="waitText" class="hidden ml-3 text-xs text-gray-500">
                  Analyzing code... Please wait 10-20 seconds
                </span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="flex items-center space-x-2"
           data-controller="pr-modal"
           data-pr-modal-issue-id-value="<%= @issue.id %>"
           data-pr-modal-exception-class-value="<%= @issue.exception_class %>"
           data-pr-modal-controller-action-value="<%= @issue.controller_action %>"
           data-action="keydown@window->pr-modal#closeOnEscape">
        <% connect_required = (@current_project || @project)&.settings&.dig('github_repo').blank? %>
        <% create_pr_path = if @current_project
                              project_slug_error_create_pr_path(@current_project.slug, @issue)
                            elsif @project
                              project_error_create_pr_path(@project, @issue)
                            else
                              nil
                            end %>
        <% has_ai_fix = @issue.ai_summary.present? && @issue.ai_summary.include?('```') %>

        <% if connect_required %>
          <% settings_link = if @current_project
                               project_slug_settings_path(@current_project.slug)
                             elsif @project
                               project_settings_path(@project)
                             else
                               settings_path
                             end %>
          <%= link_to "Connect GitHub", settings_link, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-normal rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% elsif create_pr_path %>
          <% if has_ai_fix && !(@current_project || @project)&.settings&.dig('issue_pr_urls', @issue.id.to_s).present? %>
            <%# Show enhanced button that opens modal %>
            <button type="button"
                    data-action="click->pr-modal#open"
                    class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-normal rounded-md text-white bg-[#24292e] hover:bg-black cursor-pointer"
                    title="Creates a PR with the AI-suggested fix code applied to your repository">
              <svg viewBox="0 0 16 16" width="16" height="16" class="mr-2" aria-hidden="true"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.5 7.5 0 012 0c1.53-1.03 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
              Open PR on GitHub
            </button>
          <% end %>

          <%# PR Creation Modal %>
          <div data-pr-modal-target="modal"
               data-action="click->pr-modal#closeOnBackdrop"
               class="hidden fixed inset-0 z-50 overflow-y-auto"
               aria-labelledby="modal-title"
               role="dialog"
               aria-modal="true">
            <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
              <%# Background overlay with blur %>
              <div class="fixed inset-0 bg-white/60 backdrop-blur-md transition-opacity"></div>

              <%# Modal panel %>
              <div class="relative inline-block align-bottom border border-gray-200 bg-white rounded-2xl w-[420px] max-w-full px-4 pt-5 pb-4 text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:p-6">
                <div class="absolute top-0 right-0 pt-4 pr-4">
                  <button type="button"
                          data-action="click->pr-modal#close"
                          class="bg-white rounded-md text-gray-400 hover:text-gray-500 focus:outline-none mr-3">
                    <span class="sr-only">Close</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>
                </div>

                <div class="sm:flex sm:items-start">
                  <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-indigo-100 sm:mx-0 sm:h-10 sm:w-10">
                    <svg class="h-6 w-6 text-violet-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                  </div>
                  <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
                    <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                      Create Pull Request
                    </h3>
                    <div class="mt-2">
                      <p class="text-sm text-gray-500 mb-4">
                        <% if has_ai_fix %>
                          PR will be created with AI-generated fix for the error <strong><%= @issue.exception_class %></strong>
                        <% else %>
                          PR will be created with the error description and suggestions for fixing.
                        <% end %>
                      </p>

                      <%= form_with url: create_pr_path, method: :post, local: false, html: { data: { turbo: false, pr_modal_target: 'form', action: 'submit->pr-modal#submit' } } do |f| %>
                        <div class="mb-4">
                          <label for="branch_name" class="block text-sm font-medium text-gray-700 mb-1">
                            Branch Name
                          </label>
                          <%= f.text_field :branch_name,
                                           data: { pr_modal_target: 'branchInput' },
                                           placeholder: "Leave empty for AI generation",
                                           class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" %>
                          <p class="mt-1 text-xs text-gray-500">
                            Leave empty, and AI will generate the name automatically
                          </p>
                        </div>

                        <div class="mb-4 p-3 bg-gray-50 rounded-md">
                          <div class="flex items-center justify-between">
                            <span class="text-xs text-gray-500">Suggested name:</span>
                            <button type="button"
                                    data-action="click->pr-modal#useSuggested"
                                    class="text-xs text-indigo-600 hover:text-indigo-700 font-medium">
                              Use
                            </button>
                          </div>
                          <code data-pr-modal-target="suggestedBranch" class="block mt-1 text-sm font-mono text-gray-700">ai-fix/loading...</code>
                        </div>

                        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                          <%= f.submit "Create PR",
                                       data: { pr_modal_target: 'submitButton' },
                                       class: "w-full inline-flex justify-center items-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-gradient-to-r from-indigo-500 to-violet-500 text-base font-medium text-white hover:from-indigo-600 hover:to-violet-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm cursor-pointer ml-2 disabled:opacity-50 disabled:cursor-not-allowed" %>
                          <button type="button"
                                  data-action="click->pr-modal#close"
                                  data-pr-modal-target="cancelButton"
                                  class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm">
                            Cancel
                          </button>
                        </div>
                        
                        <!-- Loading indicator -->
                        <div data-pr-modal-target="loadingIndicator" class="hidden mt-4 text-center">
                          <div class="inline-flex items-center px-4 py-2 bg-indigo-50 rounded-lg">
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span class="text-sm font-medium text-indigo-700">Creating PR and opening in new tab...</span>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <% pr_url = (@current_project || @project)&.settings&.dig('issue_pr_urls', @issue.id.to_s) %>
          <% if pr_url.present? %>
            <%= link_to pr_url, target: "_blank", rel: "noopener", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-normal rounded-md text-white bg-[#24292e] hover:bg-black cursor-pointer" do %>
              <svg viewBox="0 0 16 16" width="16" height="16" class="mr-2" aria-hidden="true"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.5 7.5 0 012 0c1.53-1.03 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
              View PR
            <% end %>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>

  <% if current_tab == 'stack' %>
    <div class="px-6 py-4 border-t border-gray-200">
      <!-- Summary Info -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-gray-50 rounded-lg p-4">
          <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Controller Action</div>
          <code class="text-sm font-medium text-gray-800"><%= @issue.controller_action %></code>
        </div>

        <% if @common_method.present? %>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">HTTP Method</div>
            <code class="text-sm font-medium text-gray-800"><%= @common_method %></code>
          </div>
        <% end %>

        <% if @issue.full_url.present? %>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Request URL</div>
            <code class="text-sm text-indigo-600 break-all"><%= @issue.full_url %></code>
          </div>
        <% end %>
      </div>

      <!-- Full Stack Trace with Code Context -->
      <% if @events.first %>
        <%= render "errors/stack_trace", event: @events.first %>
      <% else %>
        <div class="text-center text-gray-500 py-8">
          No stack trace data available
        </div>
      <% end %>
    </div>

  <% elsif current_tab == 'graph' %>
    <div class="border-t border-gray-200 px-6 py-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Error count over time</h3>
        <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
          <% %w[1H 4H 8H 12H 24H 48H 7D 30D].each do |rk| %>
            <% active = (@graph_range_key || '24H') == rk %>
            <%= link_to rk, url_for(params.permit!.to_h.merge(tab: 'graph', range: rk)), class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
          <% end %>
        </div>
      </div>

      <% if @graph_counts.present? && @graph_has_data %>
        <% labels = (@graph_labels || []).map { |t| case @graph_range_key; when '1H','4H','8H','12H','24H','48H' then t.strftime('%H:%M'); else t.strftime('%b %d'); end } %>
        <div class="relative" style="height: 300px;">
          <canvas data-controller="graph"
                  data-graph-labels-value='<%= labels.to_json %>'
                  data-graph-counts-value='<%= @graph_counts.to_json %>'
                  data-graph-range-value='<%= @graph_range_key %>'></canvas>
        </div>
      <% else %>
        <div class="text-center text-gray-500 py-8">No data for selected range</div>
      <% end %>
    </div>

  <% else %>
    <!-- Samples Table & Selected Sample Details -->
    <div class="border-t border-gray-200 px-6 py-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Samples</h3>
        <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
          <div class="px-4 py-2 text-xs text-gray-500">Click any value to apply a filter</div>
        </div>
      </div>

      <% if @events.any? %>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-0">
          <!-- Left: Selected sample details -->
          <div class="lg:col-span-2">
            <% if @selected_event %>
              <div class="px-2 py-2">
                <div class="flex items-center justify-between">
                  <h4 class="text-md font-medium text-gray-900">Tags for sample that occurred at</h4>
                  <div class="text-xs text-gray-500"><%= @selected_event.occurred_at.strftime('%b %-d %Y %H:%M:%S') %></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-3">
                  <div>
                    <dl class="divide-y divide-gray-200 text-[13px]">
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">hostname:</dt>
                        <dd class="mt-1 text-indigo-600 col-span-2 truncate"><%= @selected_event.server_name || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">method:</dt>
                        <dd class="mt-1 text-indigo-600 col-span-2"><%= @selected_event.request_method || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">path:</dt>
                        <dd class="mt-1 text-indigo-600 col-span-2 break-all"><%= @selected_event.request_path || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">request_id:</dt>
                        <dd class="mt-1 text-indigo-600 col-span-2 break-all"><%= @selected_event.request_id || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">response_status:</dt>
                        <dd class="mt-1 text-gray-700 col-span-2"><%= (@selected_event.context && (@selected_event.context['error_status'] || @selected_event.context[:error_status])) || '–' %></dd>
                      </div>
                      <div class="py-2 grid grid-cols-3 gap-2">
                        <dt class="text-gray-500">revision:</dt>
                        <dd class="mt-1 text-gray-700 col-span-2"><%= @selected_event.release_version || '–' %></dd>
                      </div>
                    </dl>
                  </div>

                  <% if @selected_event.from_job_failure? && @selected_event.job_context.present? %>
                  <div class="border-t border-gray-200 pt-4 mt-4">
                    <div class="text-sm font-medium text-amber-800 mb-2">Background job (Sidekiq / Solid Queue)</div>
                    <dl class="grid grid-cols-1 gap-1 text-sm">
                      <% jc = @selected_event.job_context.is_a?(Hash) ? @selected_event.job_context : {} %>
                      <% worker = jc['worker_class'] || jc[:worker_class] || jc['job_class'] || jc[:job_class] || jc['class'] || jc[:class] %>
                      <% if worker.present? %>
                        <div class="py-1"><span class="text-gray-500">Worker/Job:</span> <span class="font-mono text-gray-900"><%= worker %></span></div>
                      <% end %>
                      <% queue = jc['queue'] || jc[:queue] || jc['queue_name'] || jc[:queue_name] %>
                      <% if queue == "[FILTERED]" && (tags = @selected_event.context&.dig("tags")).present? %>
                        <% queue = tags["queue"] || tags[:queue] || queue %>
                      <% end %>
                      <% if queue.present? && queue != "[FILTERED]" %>
                        <div class="py-1"><span class="text-gray-500">Queue:</span> <span class="font-mono text-gray-900"><%= queue %></span></div>
                      <% end %>
                      <% job_id = jc['job_id'] || jc[:job_id] || jc['jid'] || jc[:jid] %>
                      <% if job_id.present? %>
                        <div class="py-1"><span class="text-gray-500">Job ID:</span> <span class="font-mono text-gray-600 text-xs"><%= job_id %></span></div>
                      <% end %>
                      <% retry_count = jc['retry_count'] || jc[:retry_count] %>
                      <% if retry_count.present? %>
                        <div class="py-1"><span class="text-gray-500">Retry count:</span> <span class="text-gray-900"><%= retry_count %></span></div>
                      <% end %>
                      <% enq = jc['enqueued_at'] || jc[:enqueued_at] %>
                      <% if enq.present? %>
                        <div class="py-1"><span class="text-gray-500">Enqueued at:</span> <span class="text-gray-900"><%= enq.is_a?(Time) ? enq.strftime('%Y-%m-%d %H:%M:%S %Z') : (enq.is_a?(Numeric) ? Time.at(enq).strftime('%Y-%m-%d %H:%M:%S %Z') : enq) %></span></div>
                      <% end %>
                      <% if jc.present? && worker.blank? && queue.blank? && job_id.blank? %>
                        <div class="py-1 text-gray-500 text-xs">Raw job context:</div>
                        <pre class="bg-gray-50 rounded p-2 text-xs overflow-x-auto"><%= JSON.pretty_generate(jc.to_h.stringify_keys) rescue jc.inspect %></pre>
                      <% end %>
                    </dl>
                  </div>
                  <% end %>

                  <!-- Parameters / Session / Environment -->
                  <div>
                    <% ctx = @selected_event.context || {} %>
                    <% req = (ctx['request'] || ctx[:request] || {}) %>
                    <% routing = (ctx['routing'] || ctx[:routing] || {}) %>
                    <% params_hash = routing['params'] || routing[:params] || {} %>
                    <% session_hash = req['session'] || req[:session] || {} %>
                    <% env_hash = ctx['env'] || ctx[:env] || {} %>

                    <div class="mb-3">
                      <div class="text-sm font-medium text-gray-900 mb-1">Parameters</div>
                      <pre class="bg-gray-50 rounded p-3 text-xs overflow-x-auto"><%= JSON.pretty_generate(params_hash) rescue params_hash.inspect %></pre>
                    </div>
                    <div class="mb-3">
                      <div class="text-sm font-medium text-gray-900 mb-1">Session data</div>
                      <pre class="bg-gray-50 rounded p-3 text-xs overflow-x-auto"><%= JSON.pretty_generate(session_hash) rescue session_hash.inspect %></pre>
                    </div>
                    <div class="mb-3">
                      <div class="text-sm font-medium text-gray-900 mb-1">Environment</div>
                      <div class="grid grid-cols-1 gap-1 text-xs text-gray-700">
                        <% if req.present? %>
                          <% if req['accept'] || req[:accept] %>
                            <div><span class="text-gray-500">HTTP_ACCEPT:</span> <span class="break-all"><%= req['accept'] || req[:accept] %></span></div>
                          <% end %>
                          <% if req['accept_encoding'] || req[:accept_encoding] %>
                            <div><span class="text-gray-500">HTTP_ACCEPT_ENCODING:</span> <span class="break-all"><%= req['accept_encoding'] || req[:accept_encoding] %></span></div>
                          <% end %>
                          <% if req['accept_language'] || req[:accept_language] %>
                            <div><span class="text-gray-500">HTTP_ACCEPT_LANGUAGE:</span> <span class="break-all"><%= req['accept_language'] || req[:accept_language] %></span></div>
                          <% end %>
                          <% if req['path_info'] || req[:path_info] %>
                            <div><span class="text-gray-500">PATH_INFO:</span> <span class="break-all"><%= req['path_info'] || req[:path_info] %></span></div>
                          <% end %>
                          <% if req['request_method'] || req[:request_method] %>
                            <div><span class="text-gray-500">REQUEST_METHOD:</span> <span class="break-all"><%= req['request_method'] || req[:request_method] %></span></div>
                          <% end %>
                          <% if req['request_path'] || req[:request_path] %>
                            <div><span class="text-gray-500">REQUEST_PATH:</span> <span class="break-all"><%= req['request_path'] || req[:request_path] %></span></div>
                          <% end %>
                          <% if req['server_name'] || req[:server_name] %>
                            <div><span class="text-gray-500">SERVER_NAME:</span> <span class="break-all"><%= req['server_name'] || req[:server_name] %></span></div>
                          <% end %>
                          <% if req['server_port'] || req[:server_port] %>
                            <div><span class="text-gray-500">SERVER_PORT:</span> <span class="break-all"><%= req['server_port'] || req[:server_port] %></span></div>
                          <% end %>
                          <% if req['server_protocol'] || req[:server_protocol] %>
                            <div><span class="text-gray-500">SERVER_PROTOCOL:</span> <span class="break-all"><%= req['server_protocol'] || req[:server_protocol] %></span></div>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>

                <% if @selected_event.formatted_backtrace.any? || @selected_event.has_structured_stack_trace? %>
                  <div class="mt-4">
                    <div class="text-sm font-medium text-gray-900 mb-2">Stack Trace</div>
                    <div class="border border-gray-200 rounded-lg overflow-hidden">
                      <%# Use structured stack trace from client if available %>
                      <% frames = parse_backtrace(@selected_event) %>
                      <% app_frames = frames.select { |f| f[:in_app] } %>
                      <% display_frames = app_frames.any? ? app_frames.first(8) : frames.first(8) %>

                      <% display_frames.each_with_index do |frame, idx| %>
                        <% is_first = idx == 0 %>
                        <% source_context = frame[:source_context] %>

                        <div class="<%= idx > 0 ? 'border-t border-gray-200' : '' %>">
                          <!-- Frame header -->
                          <div class="px-3 py-2 <%= is_first ? 'bg-red-50' : 'bg-white' %> flex items-center justify-between text-xs">
                            <div class="flex items-center gap-2 min-w-0">
                              <span class="font-mono <%= frame[:in_app] ? 'text-gray-800 font-medium' : 'text-gray-500' %> truncate">
                                <%= truncate_file_path(frame[:file] || frame[:raw], max_parts: 3) %>
                              </span>
                              <% if frame[:in_app] %>
                                <span class="inline-flex px-1 py-0.5 rounded text-[9px] font-semibold bg-indigo-100 text-indigo-700">App</span>
                              <% end %>
                            </div>
                            <div class="flex items-center gap-2 text-gray-500 flex-shrink-0 ml-2">
                              <% if frame[:method] %>
                                <span>in <code class="<%= frame[:in_app] ? 'text-indigo-600' : '' %>"><%= clean_method_name(frame[:method]) %></code></span>
                              <% end %>
                              <% if frame[:line] %>
                                <span class="font-mono <%= is_first ? 'text-red-600 font-semibold' : '' %>">:<%= frame[:line] %></span>
                              <% end %>
                            </div>
                          </div>

                          <!-- Code context for first frame (from client) -->
                          <% if is_first && source_context && source_context[:file_exists] %>
                            <div class="bg-gray-900 text-gray-100 overflow-x-auto text-xs">
                              <table class="w-full font-mono">
                                <tbody>
                                  <% source_context[:lines_before].each do |line_info| %>
                                    <tr>
                                      <td class="px-2 py-0 text-right text-gray-500 select-none w-8 border-r border-gray-700"><%= line_info[:number] %></td>
                                      <td class="px-3 py-0 whitespace-pre"><%= h(line_info[:content]) %></td>
                                    </tr>
                                  <% end %>
                                  <tr class="bg-red-900/40 border-l-2 border-red-500">
                                    <td class="px-2 py-0 text-right text-red-300 font-bold select-none w-8 border-r border-gray-700"><%= source_context[:line_content][:number] %></td>
                                    <td class="px-3 py-0 whitespace-pre text-white"><%= h(source_context[:line_content][:content]) %></td>
                                  </tr>
                                  <% source_context[:lines_after].each do |line_info| %>
                                    <tr>
                                      <td class="px-2 py-0 text-right text-gray-500 select-none w-8 border-r border-gray-700"><%= line_info[:number] %></td>
                                      <td class="px-3 py-0 whitespace-pre"><%= h(line_info[:content]) %></td>
                                    </tr>
                                  <% end %>
                                </tbody>
                              </table>
                            </div>
                          <% end %>
                        </div>
                      <% end %>

                      <% remaining = frames.count - display_frames.count %>
                      <% if remaining > 0 %>
                        <div class="px-3 py-2 bg-gray-50 text-xs text-gray-500 border-t border-gray-200">
                          + <%= remaining %> more frames (view in Stack Trace tab)
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="px-6 py-10 text-center text-gray-500">Select a sample to view details</div>
            <% end %>
          </div>

          <!-- Right: Samples list -->
          <div class="border-l border-gray-200">
            <div class="px-4 py-2 text-xs text-gray-500">Recent samples</div>
            <div class="overflow-y-auto max-h-[40rem]">
              <ul class="divide-y divide-gray-100">
                <% @events.each do |event| %>
                  <% selected = (@selected_event && @selected_event.id == event.id) %>
                  <li class="hover:bg-gray-50 <%= selected ? 'bg-indigo-50' : '' %>">
                    <%= link_to url_for(params.permit!.to_h.merge(tab: 'samples', event_id: event.id)), class: "block px-4 py-2" do %>
                      <div class="flex items-center justify-between">
                        <div class="text-xs font-medium text-gray-900"><%= event.occurred_at.strftime('%b %-d %H:%M') %></div>
                        <% status = (event.context && (event.context['error_status'] || event.context[:error_status])) %>
                        <% if status.present? %>
                          <span class="ml-2 inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium bg-gray-100 text-gray-700"><%= status %></span>
                        <% end %>
                      </div>
                      <div class="mt-1 flex items-center space-x-2 text-[11px] text-gray-600">
                        <% if event.request_method.present? %>
                          <span class="inline-flex items-center px-1 py-0.5 rounded bg-gray-100 text-gray-700"><%= event.request_method %></span>
                        <% end %>
                        <% if event.server_name.present? %>
                          <span class="truncate"><%= event.server_name %></span>
                        <% end %>
                      </div>
                      <% if event.request_path.present? %>
                        <div class="mt-1 text-[11px] text-gray-500 truncate"><%= event.request_path %></div>
                      <% end %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% else %>
        <div class="p-4 text-center text-gray-500">
          No samples found
        </div>
      <% end %>
    </div>
  <% end %>
</div>
