<% content_for :page_title do %>
  <%= @user == current_user ? "Edit Profile" : "Update User" %>
<% end %>

<div class="max-w-lg mx-auto bg-white rounded-lg shadow p-6 space-y-6">
  <h2 class="text-xl font-semibold text-gray-900"><%= @user == current_user ? "Edit Profile" : "Update User" %></h2>

  <% if @user.errors.any? %>
    <div class="rounded-xl bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= form_with model: @user, local: true do |f| %>
    <div class="space-y-4">
      <% if @user == current_user %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
            </div>
            <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  placeholder: "Enter your email address",
                  class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <div>
          <%= f.label :current_password, "Current Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <%= f.password_field :current_password,
                  autocomplete: "current-password",
                  placeholder: "Enter current password to change password",
                  required: true,
                  class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Required only if you want to change your password</p>
        </div>

        <div>
          <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <%= f.password_field :password,
                  autocomplete: "new-password",
                  placeholder: "Leave blank if you don't want to change it",
                  class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  placeholder: "Confirm your new password",
                  class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
      <% end %>

      <% if current_user.owner? %>
        <div>
          <%= f.label :role, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :role, User::ROLES.map { |r| [r.titleize, r] }, { required: true }, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      <% end %>

      <%# Super Admin checkbox - only visible to super admins editing other users %>
      <% if current_user&.super_admin? && @user != current_user %>
        <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-start">
            <%= f.check_box :super_admin, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded mt-0.5" %>
            <div class="ml-3">
              <label for="user_super_admin" class="block text-sm font-medium text-red-800">
                Grant Super Admin Access
              </label>
              <p class="text-xs text-red-600 mt-1">
                Super admins can view and switch to any account in the system. Use with caution.
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <% if !current_user.owner? && @user != current_user %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
            </div>
            <%= f.email_field :email, disabled: true, class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-50 text-gray-500" %>
          </div>
        </div>
      <% end %>

      <!-- Submit -->
      <div class="flex items-center justify-end gap-2">
        <%= f.submit @user == current_user ? "Update Profile" : "Update User", class: "inline-flex items-center justify-center px-4 py-2 h-9 bg-indigo-600 text-sm text-white font-medium rounded-md hover:bg-indigo-700 transition-colors" %>
        <%= link_to "Back", dashboard_path, class: "inline-flex items-center justify-center px-4 py-2 h-9 text-sm font-medium rounded-md text-indigo-700 bg-white border border-indigo-200 hover:bg-indigo-50 transition-colors" %>
      </div>
    </div>
  <% end %>
</div>

<% if @user == current_user %>
<div class="max-w-lg mx-auto bg-white rounded-lg shadow p-6 space-y-4 mt-4">
  <h3 class="text-lg font-semibold text-gray-900">Connected Accounts</h3>
  
  <!-- GitHub -->
  <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-gray-900 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div>
        <p class="font-medium text-gray-900">GitHub</p>
        <p class="text-sm text-gray-500"><%= @user.provider == "github" ? "Connected" : "Not connected" %></p>
      </div>
    </div>
    <% if @user.provider == "github" %>
      <%= button_to "Disconnect", disconnect_provider_user_path(@user, provider: "github"),
          method: :delete,
          data: { turbo_confirm: "Are you sure you want to disconnect GitHub? Make sure you have a password set to continue logging in." },
          class: "px-3 py-1.5 text-sm text-red-600 bg-red-50 border border-red-200 rounded-md hover:bg-red-100 transition-colors" %>
    <% elsif @user.provider.present? %>
      <span class="px-3 py-1.5 text-sm text-gray-400 bg-gray-100 border border-gray-200 rounded-md cursor-not-allowed" title="Disconnect Google first">Connect</span>
    <% else %>
      <%= button_to "Connect", connect_provider_user_path(@user, provider: "github"),
          method: :post,
          data: { turbo: false },
          class: "px-3 py-1.5 text-sm text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors" %>
    <% end %>
  </div>
  
  <!-- Google -->
  <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center border border-gray-200">
        <svg class="w-6 h-6" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
      </div>
      <div>
        <p class="font-medium text-gray-900">Google</p>
        <p class="text-sm text-gray-500"><%= @user.provider == "google_oauth2" ? "Connected" : "Not connected" %></p>
      </div>
    </div>
    <% if @user.provider == "google_oauth2" %>
      <%= button_to "Disconnect", disconnect_provider_user_path(@user, provider: "google_oauth2"),
          method: :delete,
          data: { turbo_confirm: "Are you sure you want to disconnect Google? Make sure you have a password set to continue logging in." },
          class: "px-3 py-1.5 text-sm text-red-600 bg-red-50 border border-red-200 rounded-md hover:bg-red-100 transition-colors" %>
    <% elsif @user.provider.present? %>
      <span class="px-3 py-1.5 text-sm text-gray-400 bg-gray-100 border border-gray-200 rounded-md cursor-not-allowed" title="Disconnect GitHub first">Connect</span>
    <% else %>
      <%= button_to "Connect", connect_provider_user_path(@user, provider: "google_oauth2"),
          method: :post,
          data: { turbo: false },
          class: "px-3 py-1.5 text-sm text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors" %>
    <% end %>
  </div>
  
  <p class="text-xs text-gray-500">
    <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    You can connect one account at a time. To switch providers, disconnect the current one first.
  </p>
</div>
<% end %>
