<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "ActiveRabbit" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Favicons %>
    <link rel="icon" type="image/x-icon" href="<%= asset_path('faviicons/favicon.ico') %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_path('faviicons/favicon-32.png') %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_path('faviicons/favicon-16.png') %>">
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path('faviicons/favicon-512.png') %>">

    <%# remove the old icon links
    <%# <link rel="icon" href="/icon.png" type="image/png">
    <%# <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <%# <link rel="apple-touch-icon" href="/icon.png"> %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <!-- Billing/Trial Warning Banner -->
    <%= render "shared/billing_banner" %>

    <!-- Quota Warning Banners -->
    <% if user_signed_in? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <%= render "shared/quota_warning_banner" %>
      </div>
    <% end %>

    <div class="fixed top-4 right-4 z-10 flex gap-2">
      <% if user_signed_in? %>
        <%= button_to 'Subscribe', checkouts_path, params: { plan: 'developer', interval: 'month', ai: false }, method: :post, class: 'btn btn-primary' %>
        <% allowlist = ENV.fetch('ADMIN_EMAIL_ALLOWLIST', '').split(',').map(&:strip).reject(&:blank?) %>
        <% if allowlist.include?(current_user&.email) %>
          <%= link_to 'Admin', admin_root_path, class: 'btn' %>
        <% end %>
      <% end %>
    </div>

    <%= yield %>
    <%= render "shared/google_analytics" %>
  </body>
</html>
