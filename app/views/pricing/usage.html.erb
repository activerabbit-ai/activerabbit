<% content_for :page_title do %>
  Usage & Quotas
<% end %>

<% if @account %>
  <div class="bg-indigo-50 border border-indigo-200 rounded-lg p-4 mb-6 mx-auto" style="width: 85%">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h2 class="text-lg font-semibold text-indigo-900">Current Plan: <%= @account.current_plan&.titleize %></h2>
        <% if @next_payment_date %>
          <p class="text-sm text-indigo-700">
            Next payment on <%= @next_payment_date %>
          </p>
        <% end %>
      </div>
      <div class="flex space-x-2">
        <%= link_to plan_path, class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          View Plans
        <% end %>
        <%= button_to "View Invoices", billing_portal_index_path,
              method: :post, data: { turbo: false }, form: { target: "_blank" }, class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
        <%= button_to "Manage Plan", billing_portal_index_path,
              method: :post, data: { turbo: false }, form: { target: "_blank" }, class: "inline-flex items-center px-3 py-1.5 border border-indigo-700 text-xs font-medium rounded-md shadow-sm text-indigo-700 bg-white hover:bg-indigo-50" %>
      </div>
    </div>
  </div>
<% end %>

<div class="space-y-8 mx-auto" style="width: 85%">
  <!-- Current Usage Box -->
  <% if @account %>
    <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-2xl p-8 border-2 border-indigo-200 shadow-lg mb-12">
      <div class="text-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Your Current Usage</h2>
        <p class="text-gray-600">Real-time quota monitoring for <span class="font-semibold text-indigo-600"><%= @account.current_plan.titleize %></span> plan</p>
        <p class="text-sm text-gray-500 mt-1">
          Billing Period: <%= (@account.event_usage_period_start || Time.current.beginning_of_month).strftime('%b %d') %> - <%= (@account.event_usage_period_end || Time.current.end_of_month).strftime('%b %d, %Y') %>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Error Tracking -->
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-xl transition-shadow border-l-4 border-indigo-500">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold text-gray-900">Error Tracking</h3>
            <svg class="w-8 h-8 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Used:</span>
              <span class="font-bold text-gray-900"><%= number_with_delimiter(@events_used) %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Quota:</span>
              <span class="font-medium text-gray-700"><%= number_with_delimiter(@event_quota) %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3 mt-3">
              <div class="bg-indigo-500 h-3 rounded-full transition-all" style="width: <%= [@account.usage_percentage(:events), 100].min %>%"></div>
            </div>
            <div class="text-right text-sm font-semibold" style="color: <%= @account.usage_percentage(:events) >= 90 ? '#ef4444' : @account.usage_percentage(:events) >= 80 ? '#f59e0b' : '#10b981' %>">
              <%= @account.usage_percentage(:events).round(1) %>%
            </div>
          </div>
        </div>

        <!-- AI Summaries -->
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-xl transition-shadow border-l-4 border-purple-500">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold text-gray-900">AI Summaries</h3>
            <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Used:</span>
              <span class="font-bold text-gray-900"><%= @ai_summaries_used %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Quota:</span>
              <span class="font-medium text-gray-700"><%= @ai_summaries_quota %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3 mt-3">
              <div class="bg-purple-500 h-3 rounded-full transition-all" style="width: <%= [@account.usage_percentage(:ai_summaries), 100].min %>%"></div>
            </div>
            <div class="text-right text-sm font-semibold" style="color: <%= @account.usage_percentage(:ai_summaries) >= 90 ? '#ef4444' : @account.usage_percentage(:ai_summaries) >= 80 ? '#f59e0b' : '#10b981' %>">
              <%= @account.usage_percentage(:ai_summaries).round(1) %>%
            </div>
          </div>
        </div>

        <!-- Pull Requests -->
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-xl transition-shadow border-l-4 border-pink-500">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold text-gray-900">Pull Requests</h3>
            <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
            </svg>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Used:</span>
              <span class="font-bold text-gray-900"><%= @pull_requests_used %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Quota:</span>
              <span class="font-medium text-gray-700"><%= @pull_requests_quota %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3 mt-3">
              <div class="bg-pink-500 h-3 rounded-full transition-all" style="width: <%= [@account.usage_percentage(:pull_requests), 100].min %>%"></div>
            </div>
            <div class="text-right text-sm font-semibold" style="color: <%= @account.usage_percentage(:pull_requests) >= 90 ? '#ef4444' : @account.usage_percentage(:pull_requests) >= 80 ? '#f59e0b' : '#10b981' %>">
              <%= @account.usage_percentage(:pull_requests).round(1) %>%
            </div>
          </div>
        </div>

        <!-- Projects -->
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-xl transition-shadow border-l-4 border-green-500">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold text-gray-900">Projects</h3>
            <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
            </svg>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Used:</span>
              <span class="font-bold text-gray-900"><%= @projects_used %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Quota:</span>
              <span class="font-medium text-gray-700"><%= @projects_quota %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3 mt-3">
              <div class="bg-green-500 h-3 rounded-full transition-all" style="width: <%= [@account.usage_percentage(:projects), 100].min %>%"></div>
            </div>
            <div class="text-right text-sm font-semibold" style="color: <%= @account.usage_percentage(:projects) >= 90 ? '#ef4444' : @account.usage_percentage(:projects) >= 80 ? '#f59e0b' : '#10b981' %>">
              <%= @account.usage_percentage(:projects).round(1) %>%
            </div>
          </div>
        </div>
      </div>

      <!-- Status Message -->
      <div class="mt-6 text-center">
        <% if @account.resources_with_warnings.any? %>
          <% exceeded_resources = @account.resources_with_warnings.select { |w| w[:level] == :exceeded } %>
          <% if exceeded_resources.any? %>
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-red-100 text-red-800 text-sm font-medium mb-2">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <% resource_names = exceeded_resources.map { |r| r[:name] }.join(", ") %>
              <%= resource_names %>: <%= exceeded_resources.first[:percentage].round %>% used - <%= link_to "View plans", plan_path, class: "underline font-semibold" %>
            </div>
          <% end %>

          <% warning_resources = @account.resources_with_warnings.select { |w| w[:level] != :exceeded } %>
          <% warning_resources.each do |warning| %>
            <div class="inline-flex items-center px-4 py-2 rounded-full <%= warning[:level] == :danger ? 'bg-orange-100 text-orange-800' : 'bg-yellow-100 text-yellow-800' %> text-sm font-medium mx-2 mb-2">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <%= warning[:name] %>: <%= warning[:percentage].round %>% used
            </div>
          <% end %>
        <% else %>
          <p class="text-green-600 font-medium">âœ… All resources within quota</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

