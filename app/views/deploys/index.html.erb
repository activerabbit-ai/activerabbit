<% content_for :page_title do %>
  Deploys
<% end %>

<div class="bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
    <h3 class="text-lg font-medium text-gray-900">Recent Deployments</h3>
    <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" command="show-modal" commandfor="deploy">
      Deploy Config
    </button>
  </div>

  <div class="overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Version</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Live for</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Deployed</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Errors</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Errors per hour</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @deploys.any? %>
          <% @deploys.each do |deploy| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= deploy.release.version&.slice(0, 7) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= deploy[:status] == 'success' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= deploy.status.capitalize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= deploy.live_for_human %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(deploy.started_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <% if deploy.errors_count.zero? %>
                  <span>0</span>
                <% else %>
                  <span><%= deploy.errors_count %></span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <% if deploy.errors_count.zero? %>
                  â€”
                <% else %>
                  <%= number_with_precision(deploy.errors_per_hour, precision: 2) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-6 py-12 text-center">
              <div class="mx-auto">
                <div class="w-12 h-12 mx-auto mb-4 text-gray-400">
                  ðŸš¢
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No deploys captured yet</h3>
                <p class="text-gray-500 mb-4">ActiveRabbit is monitoring your applications. Deployments will appear here when they occur.</p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'deploys_config' %>
