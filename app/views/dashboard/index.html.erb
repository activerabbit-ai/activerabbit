<% content_for :page_title do %>
  Dashboard
<% end %>

<!-- Account Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-blue-100 text-blue-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Total Projects</p>
        <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:total_projects]) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-red-100 text-red-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Open Issues</p>
        <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:open_issues]) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-green-100 text-green-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Recent Events</p>
        <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:recent_events]) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-purple-100 text-purple-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Account Users</p>
        <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:account_users]) %></p>
      </div>
    </div>
  </div>

</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Recent Issues -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Recent Issues</h3>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% if @recent_issues.any? %>
          <% @recent_issues.each do |issue| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900 truncate"><%= issue.exception_class %></p>
                  <p class="text-sm text-gray-500"><%= issue.controller_action %> â€¢ <%= time_ago_in_words(issue.last_seen_at) %> ago</p>
                </div>
              </div>
              <div class="flex items-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= issue.status == 'open' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= issue.status.humanize %>
                </span>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-sm text-gray-500 text-center py-4">No recent issues</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Account Health -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Account Health</h3>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-green-400 mr-3"></div>
            <span class="text-sm font-medium text-gray-900">Total Healthchecks</span>
          </div>
          <span class="text-sm text-gray-500"><%= @system_health[:total_healthchecks] %></span>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-green-400 mr-3"></div>
            <span class="text-sm font-medium text-gray-900">Healthy</span>
          </div>
          <span class="text-sm text-gray-500"><%= @system_health[:healthy_checks] %></span>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-yellow-400 mr-3"></div>
            <span class="text-sm font-medium text-gray-900">Warning</span>
          </div>
          <span class="text-sm text-gray-500"><%= @system_health[:warning_checks] %></span>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-red-400 mr-3"></div>
            <span class="text-sm font-medium text-gray-900">Critical</span>
          </div>
          <span class="text-sm text-gray-500"><%= @system_health[:critical_checks] %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Quick Actions -->
<div class="mt-8">
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <%= link_to(current_project ? project_security_path(current_project) : security_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors") do %>
          <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
          <div>
            <p class="text-sm font-medium text-gray-900">Security</p>
            <p class="text-xs text-gray-500">View security events</p>
          </div>
        <% end %>

        <%= link_to account_settings_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <svg class="w-8 h-8 text-purple-600 mr-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52-2.523c0-1.393 1.135-2.524 2.52-2.524h2.52v2.524c0 1.393-1.127 2.523-2.52 2.523zm0 0c-1.393 0-2.52 1.135-2.52 2.523v2.52c0 1.393 1.127 2.524 2.52 2.524 1.393 0 2.523-1.131 2.523-2.524v-2.52c0-1.388-1.13-2.523-2.523-2.523zm7.12-7.12a2.528 2.528 0 0 1-2.523-2.52c0-1.393 1.135-2.524 2.523-2.524 1.393 0 2.524 1.131 2.524 2.524v2.52c0 1.393-1.131 2.52-2.524 2.52zm0 0c1.393 0 2.524 1.127 2.524 2.52v2.523c0 1.393-1.131 2.524-2.524 2.524-1.388 0-2.523-1.131-2.523-2.524V15.685c0-1.393 1.135-2.52 2.523-2.52z"/>
          </svg>
          <div>
            <p class="text-sm font-medium text-gray-900">Slack Settings</p>
            <p class="text-xs text-gray-500">Configure notifications</p>
          </div>
        <% end %>

        <%= link_to settings_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <div>
            <p class="text-sm font-medium text-gray-900">System Settings</p>
            <p class="text-xs text-gray-500">Configure application</p>
          </div>
        <% end %>

        <%= link_to(current_project ? project_logs_path(current_project) : logs_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors") do %>
          <svg class="w-8 h-8 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <div>
            <p class="text-sm font-medium text-gray-900">View Logs</p>
            <p class="text-xs text-gray-500">System activity logs</p>
          </div>
        <% end %>

        <%= link_to(current_project ? project_security_path(current_project) : security_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors") do %>
          <svg class="w-8 h-8 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          <div>
            <p class="text-sm font-medium text-gray-900">Security</p>
            <p class="text-xs text-gray-500">Monitor security events</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
