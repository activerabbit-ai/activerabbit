<% content_for :page_title do %>
  Update User
<% end %>

<div class="max-w-lg mx-auto bg-white rounded-lg shadow p-6 space-y-6">
  <h2 class="text-xl font-semibold text-gray-900">Update User</h2>

  <%= form_with model: @user, local: true do |f| %>
    <div class="space-y-4">
      <%= f.hidden_field :email, value: @user.email %>

      <!-- Role -->
      <div>
        <label for="account_slack_webhook_url" class="block text-sm font-medium text-gray-700 mb-2">
          Role
          <span class="text-red-500">*</span>
        </label>
        <%= f.select :role, User::ROLES.map { |r| [r.titleize, r] }, { required: true }, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <!-- Submit -->
      <div class="pt-4">
        <%= f.submit "Update User", class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    </div>
  <% end %>
</div>
