<% content_for :page_title do %>
  ActiveRabbit Errors
<% end %>

<!-- Summary Stats -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Total Errors</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @total_errors %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Open Issues</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @open_errors %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Recent (1hr)</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @recent_errors %></p>
      </div>
    </div>
  </div>
</div>

<!-- Errors List / Graph Toggle -->
<div class="bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-medium text-gray-900">üê∞ Captured Errors</h3>
      <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
        <% list_url = url_for(params.permit!.to_h.except(:tab, :range)) %>
        <% graph_url = url_for(params.permit!.to_h.merge(tab: 'graph', range: (params[:range] || '7D'))) %>
        <% list_active = params[:tab] != 'graph' %>
        <% graph_active = params[:tab] == 'graph' %>
        <%= link_to 'List', list_url, class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{list_active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
        <%= link_to 'Graph', graph_url, class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{graph_active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
      </div>
    </div>
  </div>

    <% if params[:tab] == 'graph' %>
      <div class="border-t border-gray-200 px-6 py-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-medium text-gray-900">Error count over time</h3>
          <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
            <% %w[1H 4H 8H 12H 24H 48H 7D 30D].each do |rk| %>
              <% active = (@graph_range_key || '7D') == rk %>
              <%= link_to rk, url_for(params.permit!.to_h.merge(tab: 'graph', range: rk)), class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
            <% end %>
          </div>
        </div>

        <% if @graph_counts.present? && @graph_has_data %>
          <% labels = (@graph_labels || []).map { |t| case @graph_range_key; when '1H','4H','8H','12H','24H','48H' then t.strftime('%H:%M'); else t.strftime('%b %d'); end } %>
          <div class="relative" style="height: 300px;">
            <canvas data-controller="graph"
                    data-graph-labels-value='<%= labels.to_json %>'
                    data-graph-counts-value='<%= @graph_counts.to_json %>'
                    data-graph-range-value='<%= @graph_range_key %>'></canvas>
          </div>
        <% else %>
          <div class="text-center text-gray-500 py-8">No data for selected range</div>
        <% end %>
      </div>
    <% elsif @issues.any? %>
    <!-- Proper HTML Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Error & Action
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Last Seen
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              First Seen
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @issues.each do |issue| %>
            <tr class="hover:bg-gray-50 hover:cursor-pointer transition-colors" onclick="window.location.href='<%=
              if @current_project
                "/#{@current_project.slug}/errors/#{issue.id}"
              elsif @project
                project_error_path(@project, issue)
              else
                error_path(issue)
              end %>'">
              <!-- Error & Action -->
              <td class="px-6 py-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0 mt-1">
                    <div class="w-2 h-2 rounded-full <%= issue.status == 'open' ? 'bg-red-400' : issue.status == 'wip' ? 'bg-yellow-400' : 'bg-green-400' %>"></div>
                  </div>
                  <div class="ml-3 min-w-0">
                    <div class="flex items-center space-x-2 mb-1">
                      <span class="text-sm font-medium text-indigo-600">
                        <%= issue.exception_class %>
                      </span>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        <%= truncate(issue.project&.name || 'Unknown', length: 15) %>
                      </span>
                    </div>
                    <% if issue.sample_message.present? %>
                      <div class="text-xs text-gray-600 mb-1">
                        <%= truncate(issue.sample_message, length: 60) %>
                      </div>
                    <% end %>
                    <div class="text-xs text-gray-500">
                      <strong>Action:</strong> <%= issue.controller_action || 'unknown' %>
                    </div>
                    <div class="text-xs text-gray-400">
                      <%= truncate(issue.top_frame || 'unknown', length: 40) %>
                    </div>
                  </div>
                </div>
              </td>

              <!-- Status -->
              <td class="px-6 py-4">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= issue.status == 'open' ? 'bg-red-100 text-red-800' : issue.status == 'wip' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                  <%= issue.status == 'closed' ? 'RESOLVED' : issue.status.upcase %>
                </span>
              </td>

              <!-- Total -->
              <td class="px-6 py-4">
                <div class="text-sm font-semibold text-gray-900"><%= issue.count %></div>
                <div class="text-xs text-gray-500">times</div>
              </td>

              <!-- Last Seen -->
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= time_ago_in_words(issue.last_seen_at) %> ago</div>
                <div class="text-xs text-gray-500"><%= issue.last_seen_at.strftime("%b %d, %Y %H:%M") %></div>
              </td>

              <!-- First Seen -->
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= time_ago_in_words(issue.first_seen_at) %> ago</div>
                <div class="text-xs text-gray-500"><%= issue.first_seen_at.strftime("%b %d, %Y %H:%M") %></div>
              </td>

              <!-- Actions -->
              <td class="px-6 py-4" onclick="event.stopPropagation();">
                <div class="flex items-center space-x-2">
                  <%= link_to(
                    if @current_project
                      "/#{@current_project.slug}/errors/#{issue.id}?tab=ai"
                    elsif @project
                      project_error_path(@project, issue, tab: 'ai')
                    else
                      error_path(issue, tab: 'ai')
                    end,
                    class: "inline-flex items-center px-2 py-1 border border-indigo-200 shadow-sm text-xs font-medium rounded text-indigo-600 bg-indigo-50 hover:bg-indigo-100 focus:outline-none focus:ring-1 focus:ring-indigo-500") do %>
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    AI summary
                  <% end %>


                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-12 text-center">
      <div class="w-12 h-12 mx-auto mb-4 text-gray-400">
        üê∞
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No errors captured yet</h3>
      <p class="text-gray-500 mb-4">ActiveRabbit is monitoring your applications. Errors will appear here when they occur.</p>
      <div class="text-sm text-gray-400">
        <p>Try triggering some test errors:</p>
        <code class="bg-gray-100 px-2 py-1 rounded">curl http://localhost:3001/test/exception</code>
      </div>
    </div>
  <% end %>
</div>
