<% content_for :page_title do %>
  Performance
<% end %>

<!-- Performance Metrics Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Avg Response Time</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @metrics[:response_time] %></p>
      </div>
      <div class="p-3 rounded-full bg-blue-100 text-blue-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Total Requests</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @metrics[:throughput] %></p>
      </div>
      <div class="p-3 rounded-full bg-green-100 text-green-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Error Rate</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @metrics[:error_rate] %></p>
      </div>
      <div class="p-3 rounded-full bg-red-100 text-red-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>
    </div>
  </div>

  <%= link_to(
        if @current_project
          project_slug_performance_path(@current_project.slug, filter: "slow")
        elsif @project
          project_performance_path(@project, filter: "slow")
        else
          performance_path(filter: "slow")
        end,
        class: "bg-white rounded-lg shadow p-6 block hover:bg-gray-50 transition-colors"
      ) do %>
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Slow Requests</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @metrics[:slow_requests] || "0" %></p>
      </div>
      <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
    </div>
  <% end %>
</div>

<!-- Performance Issues Table / Graph Toggle -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold text-gray-900">ðŸš€ Performance Issues</h2>

      <form method="get" class="flex-1 flex justify-end mr-2">
        <div class="relative w-64">
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-gray-400"
               xmlns="http://www.w3.org/2000/svg" fill="none"
               viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input type="text" name="q" placeholder="Filter by attribute values"
                 value="<%= params[:q] %>"
                 class="w-full pl-9 pr-3 py-1.5 rounded-full border border-gray-300 bg-gray-50 text-xs focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 placeholder-gray-400">
        </div>
      </form>

      <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
        <% list_url = url_for(params.permit!.to_h.except(:tab, :range)) %>
        <% graph_url = url_for(params.permit!.to_h.merge(tab: 'graph', range: (params[:range] || '7D'))) %>
        <% list_active = params[:tab] != 'graph' %>
        <% graph_active = params[:tab] == 'graph' %>
        <%= link_to 'List', list_url, class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{list_active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
        <%= link_to 'Graph', graph_url, class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{graph_active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
      </div>
    </div>
  </div>

  <% if params[:tab] == 'graph' %>
    <div class="px-6 py-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Requests over time</h3>
        <div class="inline-flex bg-gray-100 p-1 rounded-full shadow-inner">
          <% %w[1H 4H 8H 12H 24H 48H 7D 30D ALL].each do |rk| %>
            <% active = (@graph_range_key || '7D') == rk %>
            <%= link_to rk, url_for(params.permit!.to_h.merge(tab: 'graph', range: rk)), class: "ml-1 first:ml-0 px-3 py-1.5 rounded-full text-xs font-medium #{active ? 'bg-white text-indigo-600 shadow ring-1 ring-gray-200' : 'text-gray-600 hover:text-gray-800'}" %>
          <% end %>
        </div>
      </div>

      <% if @graph_counts.present? && @graph_has_data %>
        <% labels = (@graph_labels || []).map { |t| case @graph_range_key; when '1H','4H','8H','12H','24H','48H' then t.strftime('%H:%M'); else t.strftime('%b %d'); end } %>
        <div class="relative" style="height: 300px;">
          <canvas data-controller="graph"
                  data-graph-labels-value='<%= labels.to_json %>'
                  data-graph-counts-value='<%= @graph_counts.to_json %>'
                  data-graph-range-value='<%= @graph_range_key %>'></canvas>
        </div>
      <% else %>
        <div class="text-center text-gray-500 py-8">No data for selected range</div>
      <% end %>
    </div>
  <% elsif (@list_rows.present?) %>
    <!-- Performance Issues Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <a href="?sort=action_<%= params[:sort] == 'action_asc' ? 'desc' : 'asc' %>">Action</a>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <a href="?sort=avg_response_time_<%= params[:sort] == 'avg_response_time_asc' ? 'desc' : 'asc' %>">Avg Response</a>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Impact %
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <a href="?sort=status_<%= params[:sort] == 'status_asc' ? 'desc' : 'asc' %>">Status</a>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <a href="?sort=last_seen_<%= params[:sort] == 'last_seen_asc' ? 'desc' : 'asc' %>">Last Seen</a>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              PR
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              AI
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @list_rows.each do |perf_issue| %>
            <% row_link = if @current_project
                            project_slug_performance_action_detail_path(@current_project.slug, target: perf_issue[:action])
                          elsif @project
                            project_performance_action_detail_path(@project, target: perf_issue[:action])
                          else
                            performance_action_detail_path(target: perf_issue[:action])
                          end %>
            <% ai_link = if @current_project
                           project_slug_performance_action_detail_path(@current_project.slug, target: perf_issue[:action], tab: 'ai')
                         elsif @project
                           project_performance_action_detail_path(@project, target: perf_issue[:action], tab: 'ai')
                         else
                           performance_action_detail_path(target: perf_issue[:action], tab: 'ai')
                         end %>
            <tr class="hover:bg-gray-50 hover:cursor-pointer transition-colors" onclick="window.location.href='<%= row_link %>'">
              <td class="px-6 py-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-2 h-2 rounded-full mt-2 mr-3 <%= perf_issue[:status] == 'slow' ? 'bg-yellow-400' : perf_issue[:error_count].to_i > 0 ? 'bg-red-400' : 'bg-green-400' %>"></div>
                  <div>
                    <%= link_to perf_issue[:action], row_link, class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" %>
                    <div class="text-xs text-gray-500 mt-1">
                      <% if perf_issue[:error_count].to_i > 0 %>
                        <%= perf_issue[:error_count] %> errors
                      <% end %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900">
                  <%= perf_issue[:avg_response_time] %>
                </div>
              </td>
              <td class="px-6 py-4">
                <% denom = @total_requests_in_window.to_i %>
                <% num = perf_issue[:total_requests].to_i %>
                <% impact = (denom > 0 && num > 0) ? ((num.to_f / denom.to_f) * 100).round(2) : 0.0 %>
                <% if impact > 0 %>
                  <div class="text-sm font-semibold <%= impact > 50 ? 'text-red-600' : 'text-gray-900' %>">~<%= impact %>%</div>
                  <div class="text-xs text-gray-500"><%= number_with_delimiter(num) %> requests </div>
                <% else %>
                  <span class="text-xs text-gray-400">â€”</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% if perf_issue[:status] == 'slow' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    Slow
                  </span>
                <% elsif perf_issue[:error_count].to_i > 0 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Issues
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Healthy
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">
                  <%= time_ago_in_words(perf_issue[:last_seen]) %> ago
                </div>
                <div class="text-xs text-gray-500">
                  <%= perf_issue[:last_seen].strftime("%b %d, %Y") %>
                </div>
              </td>
              <td class="px-6 py-4" onclick="event.stopPropagation();">
                <% if (pr_url = perf_issue[:github_pr_url]).present? %>
                  <%= link_to pr_url, target: "_blank", rel: "noopener", class: "inline-flex items-center px-2 py-1 text-xs font-medium text-gray-600 hover:text-gray-900 focus:outline-none" do %>
                    <svg class="w-4 h-4" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.57 7.57 0 012-.27c.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.19 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z" clip-rule="evenodd" />
                    </svg>
                    <span class="ml-1">GitHub</span>
                  <% end %>
                <% else %>
                  <span class="text-xs text-gray-400">â€”</span>
                <% end %>
              </td>
              <td class="px-6 py-4" onclick="event.stopPropagation();">
                <%= link_to(ai_link,
                            target: "_blank",
                            rel: "noopener",
                            class: "inline-flex items-center px-2 py-1 border border-indigo-200 shadow-sm text-xs font-medium rounded text-indigo-600 bg-indigo-50 hover:bg-indigo-100 focus:outline-none focus:ring-1 focus:ring-indigo-500") do %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  AI summary
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @pagy && @pagy.pages > 1 %>
      <div class="px-6 py-4 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <div class="hidden sm:block">
            <p class="text-sm text-gray-700">
              Showing
              <span class="font-medium"><%= @pagy.from %></span>
              to
              <span class="font-medium"><%= @pagy.to %></span>
              of
              <span class="font-medium"><%= @pagy.count %></span>
              performance issues
            </p>
          </div>
          <div class="flex-1 flex justify-end">
            <%= render "shared/pagination_prev_next", pagy: @pagy %>
          </div>
        </div>
      </div>
    <% end %>
  <% elsif @project || @current_project %>
    <div class="p-12 text-center">
      <div class="w-12 h-12 mx-auto mb-4 text-gray-400">
        ðŸš€
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No performance data yet</h3>
      <p class="text-gray-500 mb-4">ActiveRabbit is monitoring your applications. Performance data will appear here once your app starts sending metrics.</p>
    </div>
  <% elsif @projects && @projects.any? %>
    <!-- Global Projects Performance Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Project
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Avg Response Time
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Error Count
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @projects.each do |project| %>
            <% stats = @global_stats[project.id] %>
            <tr class="hover:bg-gray-50 hover:cursor-pointer transition-colors" onclick="window.location.href='<%= project_performance_path(project) %>'">
              <td class="px-6 py-4">
                <div class="flex items-center">
                  <div class="flex-shrink-0 w-2 h-2 rounded-full <%= stats[:error_count] > 0 ? 'bg-red-400' : stats[:avg_response_time] && stats[:avg_response_time] > 1000 ? 'bg-yellow-400' : 'bg-green-400' %> mr-3"></div>
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= project.name %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= project.description || "Environment: #{project.environment}" %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">
                  <%= stats[:avg_response_time] ? "#{stats[:avg_response_time]}ms" : "N/A" %>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">
                  <%= stats[:error_count] %>
                </div>
              </td>
              <td class="px-6 py-4">
                <% if stats[:error_count] > 0 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Issues
                  </span>
                <% elsif stats[:avg_response_time] && stats[:avg_response_time] > 1000 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    Slow
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Healthy
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <!-- No Data State -->
    <div class="p-12 text-center">
      <div class="w-12 h-12 mx-auto mb-4 text-gray-400">
        ðŸš€
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No performance data yet</h3>
      <p class="text-gray-500 mb-4">ActiveRabbit is monitoring your applications. Performance data will appear here once your app starts sending metrics.</p>
    </div>
  <% end %>
</div>
