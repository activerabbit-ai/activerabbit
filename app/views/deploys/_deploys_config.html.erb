<el-dialog>
  <dialog id="deploy" aria-labelledby="deploy-title" class="fixed inset-0 overflow-y-auto bg-transparent backdrop:bg-transparent">
    <el-dialog-backdrop class="fixed inset-0 bg-gray-500/75 transition-opacity data-closed:opacity-0 data-enter:duration-300 data-enter:ease-out data-leave:duration-200 data-leave:ease-in"></el-dialog-backdrop>

    <div tabindex="0" class="fixed inset-0 flex items-center justify-center p-4 text-center">
      <el-dialog-panel class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all data-closed:translate-y-4 data-closed:opacity-0 sm:my-8 sm:w-full sm:max-w-3xl">
        <div class="bg-white px-6 pt-5 pb-4">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
              <h3 id="deploy-title" class="text-lg font-semibold text-gray-900">Deploy Config</h3>
              <div class="mt-2">
                <p class="text-sm text-gray-500">To enable ActiveRabbit to track your deployments, copy this snippet to your config/initializers/activerabbit.rb:</p>

                <div class="relative mt-2 bg-gray-100 rounded text-sm overflow-x-auto p-4">
                  <!-- Copy button -->
                  <button id="copy-config-btn" onclick="copyConfigDeployCode()"
                          class="absolute top-2 right-2 bg-gray-200 hover:bg-gray-300 text-xs px-2 py-1 rounded">Copy</button>
                  <span id="copy-config-indicator" class="absolute top-2 right-16 text-xs text-green-600 hidden">Copied!</span>

                  <!-- Code block -->
                  <pre id="deploy-config-code" class="whitespace-pre-wrap text-xs">
# Example for config/initializers/activerabbit.rb
config.revision = ENV["APP_REVISION"] || `git rev-parse HEAD`.chomp
                  </pre>
                </div>
              </div>
              <div class="mt-2">
                <p class="text-sm text-gray-500">Or you can copy this snippet to your CI file:</p>

                <div class="relative mt-2 bg-gray-100 rounded text-sm overflow-x-auto p-4">
                  <!-- Copy button -->
                  <button id="copy-ci-btn" onclick="copyCIDeployCode()"
                          class="absolute top-2 right-2 bg-gray-200 hover:bg-gray-300 text-xs px-2 py-1 rounded">Copy</button>
                  <span id="copy-ci-indicator" class="absolute top-2 right-16 text-xs text-green-600 hidden">Copied!</span>

                  <!-- Code block -->
                  <pre id="deploy-ci-code" class="whitespace-pre-wrap text-xs">
# Example for GitHub Actions
- name: Notify ActiveRabbit Deploy
  run: |
    curl -X POST https://app.activerabbit.ai/api/v1/deploys \
      -H "Content-Type: application/json" \
      -H "X-Project-Token: ${{ secrets.PROJECT_TOKEN }}" \
      -d '{
        "project_slug": "<%= @project_scope.slug %>",
        "version": "${{ github.sha }}",
        "environment": "<%= @project_scope.environment %>",
        "started_at": "${{ steps.deploy-started-at }}",
        "finished_at": "${{ steps.deploy-finished-at }}"
      }'
                  </pre>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 px-6 py-3 sm:flex sm:flex-row-reverse">
          <button type="button" command="close" commandfor="deploy"
                  class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs hover:bg-gray-50 sm:mt-0 sm:w-auto">
            Cancel
          </button>
        </div>
      </el-dialog-panel>
    </div>
  </dialog>
</el-dialog>

<script>
  function copyCIDeployCode() {
    const code = document.getElementById('deploy-ci-code').innerText;
    navigator.clipboard.writeText(code).then(() => {
      const indicator = document.getElementById('copy-ci-indicator');
      indicator.classList.remove('hidden');
      setTimeout(() => indicator.classList.add('hidden'), 2000);
    });
  }
  function copyConfigDeployCode() {
    const code = document.getElementById('deploy-config-code').innerText;
    navigator.clipboard.writeText(code).then(() => {
      const indicator = document.getElementById('copy-config-indicator');
      indicator.classList.remove('hidden');
      setTimeout(() => indicator.classList.add('hidden'), 2000);
    });
  }
</script>
