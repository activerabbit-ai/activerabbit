<% content_for :page_title do %>
  Users
<% end %>

<div class="max-w-4xl mx-auto space-y-6">
  <!-- Application Settings -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
      <h2 class="text-lg font-medium text-gray-900">Users</h2>
      <%= link_to new_user_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add User
      <% end %>
    </div>
    <div class="p-6 space-y-4">
      <% @users.each do |user| %>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600"><%= user.email %></p>
          </div>
          <div>
            <% if user.admin? %>
              <span class="px-2 py-1 text-xs font-medium text-white bg-blue-600 rounded-full">Admin</span>
            <% else %>      
              <span class="px-2 py-1 text-xs font-medium text-gray-800 bg-gray-200 rounded-full">Manager</span>
            <% end %>
          </div>
        </div>
        <% unless user == @users.last %>
          <hr class="border-gray-200">
        <% end %>
      <% end %>
    </div>
  </div>
</div>
