<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:page_title) ? content_for(:page_title) : "ActiveRabbit" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/highlight.js@11.9.0/styles/github-dark.min.css">
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <div class="h-screen flex overflow-hidden">
      <!-- Sidebar -->
      <div class="fixed inset-y-0 left-0 bg-gray-900 text-white w-64 p-4 flex flex-col">
        <div class="flex items-center mb-6">
          <%= render "shared/brand", href: root_path, size: 28, text_class: "text-xl font-bold", variant: 'admin' %>
        </div>

        <nav class="space-y-2 flex-1 overflow-y-auto pr-1">
                    <%
            # Determine base paths based on current project or user's selected project for menu
            menu_project = (defined?(@current_project) && @current_project) ? @current_project : selected_project_for_menu

            if menu_project
              base_deploys_path = "/#{menu_project.slug}/deploys"
              base_errors_path = "/#{menu_project.slug}/errors"
              base_performance_path = "/#{menu_project.slug}/performance"
            else
              # Fallback to global paths if no projects exist
              base_deploys_path = deploys_path
              base_errors_path = errors_path
              base_performance_path = performance_path
            end
          %>

          <!-- Always show Dashboard link -->
          <%= link_to dashboard_path,
              class: "flex items-center px-4 py-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white transition-colors #{'bg-gray-800 text-white' if current_page?(dashboard_path)}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v4H8V5z"></path>
            </svg>
            Dashboard
          <% end %>

          <%= link_to base_deploys_path,
              class: "flex items-center px-4 py-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white transition-colors #{'bg-gray-800 text-white' if current_page?(base_deploys_path)}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            Deploys
          <% end %>

          <%= link_to base_errors_path,
              class: "flex items-center px-4 py-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white transition-colors #{'bg-gray-800 text-white' if current_page?(base_errors_path)}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            Errors
          <% end %>

          <%= link_to base_performance_path,
              class: "flex items-center px-4 py-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white transition-colors #{'bg-gray-800 text-white' if current_page?(base_performance_path)}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Performance
          <% end %>
<%
=begin%>

          <%= link_to security_path,
              class: "flex items-center px-4 py-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white transition-colors #{'bg-gray-800 text-white' if current_page?(security_path)}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            Security
          <% end %>

          <%= link_to logs_path,
              class: "flex items-center px-4 py-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white transition-colors #{'bg-gray-800 text-white' if current_page?(logs_path)}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Logs
          <% end %>
<%
=end%>

          <div class="border-t border-gray-700 my-4"></div>



          <% base_settings_path = defined?(@current_project) && @current_project ? "/#{@current_project.slug}/settings" : settings_path %>
          <%= link_to base_settings_path,
              class: "flex items-center px-4 py-3 text-gray-300 rounded-lg hover:bg-gray-800 hover:text-white transition-colors #{'bg-gray-800 text-white' if current_page?(base_settings_path)}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Settings
          <% end %>
        </nav>

        <!-- Persistent Subscription Promo Box at bottom of sidebar -->
        <div class="mt-auto p-4 rounded-lg bg-indigo-50 border border-indigo-100">
          <h4 class="text-sm font-semibold text-indigo-900">Unlock more with a Subscription</h4>
          <p class="text-xs text-indigo-800 mt-1">Higher quotas, AI suggestions, advanced alerts.</p>
          <% days_left = nil %>
          <% if current_account&.trial_ends_at && current_account.trial_ends_at > Time.current %>
            <% days_left = (current_account.trial_ends_at.to_date - Date.current).to_i %>
          <% end %>
          <%= link_to pricing_path,
              class: "mt-2 inline-flex items-center justify-center w-full px-3 py-2 text-sm font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700 cursor-pointer space-x-2" do %>
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 17l6-6 4 4 8-8" />
            </svg>
            <span>Upgrade</span>
          <% end %>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col ml-64 overflow-y-auto">
        <!-- Top Navigation -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="flex items-center justify-between px-6 py-4">
            <div class="flex items-center space-x-6">
              <%
=begin%>
 <h1 class="text-2xl font-semibold text-gray-900">
                <%= content_for?(:page_title) ? yield(:page_title) : "Dashboard" %>
              </h1>
<%
=end%>

              <!-- Project Selector -->
              <% if user_signed_in? && current_account&.projects&.any? %>
                <div class="relative" data-controller="dropdown">
                  <button data-action="click->dropdown#toggle" class="flex items-center space-x-2 px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 border border-gray-300 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <div class="w-2 h-2 bg-indigo-600 rounded-full"></div>
                    <span>
                      <% if defined?(@current_project) && @current_project %>
                        <%= @current_project.name %>
                      <% elsif selected_project_for_menu %>
                        <%= selected_project_for_menu.name %>
                      <% else %>
                        <%= current_account.projects.first&.name || "No Projects" %>
                      <% end %>
                    </span>
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </button>

                  <!-- Project Dropdown Menu -->
                  <div data-dropdown-target="menu" class="hidden absolute left-0 mt-2 w-64 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-50">
                    <div class="py-1 max-h-60 overflow-y-auto">
                      <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wide border-b border-gray-100">
                        Switch Project
                      </div>
                      <% current_account.projects.order(:name).each do |project| %>
                        <%= link_to "/#{project.slug}",
                            class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-100 #{'bg-indigo-50 text-indigo-700' if (defined?(@current_project) && @current_project&.id == project.id) || (selected_project_for_menu&.id == project.id && !@current_project)}" do %>
                          <div class="w-2 h-2 bg-<%= project.active? ? 'green' : 'gray' %>-400 rounded-full mr-3"></div>
                          <div class="flex-1">
                            <div class="font-medium"><%= project.name %></div>
                            <div class="text-xs text-gray-500"><%= project.environment %></div>
                          </div>
                          <% if (defined?(@current_project) && @current_project&.id == project.id) || (selected_project_for_menu&.id == project.id && !@current_project) %>
                            <svg class="w-4 h-4 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                          <% end %>
                        <% end %>
                      <% end %>
                      <div class="border-t border-gray-100 mt-1">
                        <%= link_to new_project_path, class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-100" do %>
                          <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                          </svg>
                          <span class="font-medium">Create New Project</span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- User Menu -->
            <div class="flex items-center space-x-4">
              <!-- Notifications -->
              <button class="p-2 text-gray-400 hover:text-gray-500 relative">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
                <span class="absolute top-0 right-0 block h-2 w-2 rounded-full bg-red-400"></span>
              </button>

              <!-- Subscription CTA -->
              <%= link_to "Subscription", pricing_path,
                  class: "px-3 py-2 text-sm font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700" %>

              <!-- User Avatar and Menu -->
              <div class="relative" data-controller="dropdown">
                <button data-action="click->dropdown#toggle" class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-100 transition-colors">
                  <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center">
                    <span class="text-white text-sm font-medium">
                      <%= current_user&.email&.first&.upcase || "A" %>
                    </span>
                  </div>
                  <div class="hidden md:block text-left">
                    <div class="text-sm font-medium text-gray-900">
                      <%= current_user&.email&.split("@")&.first&.capitalize || "Admin" %>
                    </div>
                    <div class="text-xs text-gray-500">Administrator</div>
                  </div>
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>

                <!-- Dropdown Menu -->
                <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-50">
                  <div class="py-1">
                    <%= link_to edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Profile Settings
                      </div>
                    <% end %>
                    <%= link_to root_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Back to Site
                      </div>
                    <% end %>
                    <div class="border-t border-gray-100"></div>
                    <%= link_to destroy_user_session_path,
                        data: { turbo_method: :delete },
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        Sign Out
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </header>

        <!-- Flash Messages -->
        <% if notice %>
          <div class="bg-green-50 border-l-4 border-green-400 p-4 mx-6 mt-4">
            <div class="flex">
              <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <p class="ml-3 text-sm text-green-700"><%= notice %></p>
            </div>
          </div>
        <% end %>

        <% if alert %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mx-6 mt-4">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              <p class="ml-3 text-sm text-red-700"><%= alert %></p>
            </div>
          </div>
        <% end %>

        <%= render 'shared/billing_banner' %>

        <!-- Page Content -->
        <main class="flex-1 p-6">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
