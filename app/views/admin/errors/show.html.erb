<% content_for :page_title, "🐰 Error Details" %>

<!-- Breadcrumb -->
<nav class="flex mb-6" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <li class="inline-flex items-center">
      <%= link_to admin_errors_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600" do %>
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0L2.586 11a2 2 0 010-2.828l3.707-3.707a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l3.293 3.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
        </svg>
        Errors
      <% end %>
    </li>
    <li>
      <div class="flex items-center">
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2"><%= @issue.exception_class %></span>
      </div>
    </li>
  </ol>
</nav>

<!-- Error Header -->
<div class="bg-white rounded-lg shadow mb-6">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-start justify-between">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="w-4 h-4 rounded-full <%= @issue.status == 'open' ? 'bg-red-400' : @issue.status == 'wip' ? 'bg-yellow-400' : 'bg-green-400' %> mt-1"></div>
        </div>
        <div class="ml-3">
          <h1 class="text-xl font-semibold text-gray-900"><%= @issue.exception_class %></h1>
          <% if @issue.sample_message.present? %>
            <p class="text-gray-600 mt-1"><%= @issue.sample_message %></p>
          <% end %>
          <div class="flex items-center space-x-4 mt-2 text-sm text-gray-500">
            <span><strong>Project:</strong> <%= @issue.project&.name || 'Unknown' %></span>
            <span><strong>First seen:</strong> <%= time_ago_in_words(@issue.first_seen_at) %> ago</span>
            <span><strong>Last seen:</strong> <%= time_ago_in_words(@issue.last_seen_at) %> ago</span>
          </div>
        </div>
      </div>

      <div class="flex items-center space-x-3">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @issue.status == 'open' ? 'bg-red-100 text-red-800' : @issue.status == 'wip' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
          <%= @issue.status.upcase %>
        </span>

        <div class="text-right">
          <div class="text-lg font-semibold text-gray-900"><%= @issue.count %></div>
          <div class="text-xs text-gray-500">occurrences</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="px-6 py-4 bg-gray-50 flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <!-- Status Change Buttons -->
      <% if @issue.status != 'open' %>
        <%= form_with model: @issue, url: admin_error_path(@issue), method: :patch, local: true, class: "inline" do |f| %>
          <%= f.hidden_field :status, value: 'open' %>
          <%= f.submit "Reopen", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      <% end %>

      <% if @issue.status != 'wip' %>
        <%= form_with model: @issue, url: admin_error_path(@issue), method: :patch, local: true, class: "inline" do |f| %>
          <%= f.hidden_field :status, value: 'wip' %>
          <%= f.submit "Mark as Work in Progress", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" %>
        <% end %>
      <% end %>

      <% if @issue.status != 'closed' %>
        <%= form_with model: @issue, url: admin_error_path(@issue), method: :patch, local: true, class: "inline" do |f| %>
          <%= f.hidden_field :status, value: 'closed' %>
          <%= f.submit "Close", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        <% end %>
      <% end %>
    </div>

    <div class="flex items-center space-x-2">
      <%= link_to admin_error_path(@issue), method: :delete,
          confirm: 'Are you sure you want to delete this error? This action cannot be undone.',
          class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete Error
      <% end %>
    </div>
  </div>
</div>

<!-- Error Details Grid -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Stack Trace -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Stack Trace</h3>
    </div>
    <div class="p-6">
      <div class="text-xs text-gray-500 mb-2"><strong>Top Frame:</strong></div>
      <div class="bg-gray-50 rounded p-3 mb-4">
        <code class="text-sm text-gray-800"><%= @issue.top_frame %></code>
      </div>

      <div class="text-xs text-gray-500 mb-2"><strong>Controller Action:</strong></div>
      <div class="bg-gray-50 rounded p-3">
        <code class="text-sm text-gray-800"><%= @issue.controller_action %></code>
      </div>
    </div>
  </div>

  <!-- Recent Events -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Recent Occurrences</h3>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @events.any? %>
        <% @events.each do |event| %>
          <div class="p-4">
            <div class="flex items-center justify-between mb-2">
              <div class="text-sm text-gray-500">
                <%= time_ago_in_words(event.occurred_at) %> ago
              </div>
              <% if event.user_id.present? %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  User: <%= event.user_id %>
                </span>
              <% end %>
            </div>
            <% if event.context.present? && event.context['request_path'] %>
              <div class="text-xs text-gray-600">
                <strong>Path:</strong> <%= event.context['request_path'] %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="p-4 text-center text-gray-500">
          No recent events found
        </div>
      <% end %>
    </div>
  </div>
</div>
